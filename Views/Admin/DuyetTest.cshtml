@model IEnumerable<EnlightEnglishCenter.Models.TestDauVao>

@{
    ViewData["Title"] = "Duyệt Test đầu vào";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="container mt-5">
    <h2 class="text-center text-primary fw-bold mb-4">
        <i class="bi bi-clipboard-check me-2"></i> Duyệt Test đầu vào
    </h2>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show text-center shadow-sm" role="alert">
            @TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <table class="table table-bordered table-striped text-center align-middle shadow-sm">
        <thead class="table-info">
            <tr>
                <th>Họ tên học viên</th>
                <th>Email</th>
                <th>Ngày test</th>
                <th>Khóa học đề xuất</th>
                <th>Trạng thái</th>
                <th>Thao tác</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.HocVien?.HoTen</td>
                    <td>@item.HocVien?.Email</td>
                    <td>@(item.NgayTest?.ToString("dd/MM/yyyy"))</td>
                    <td>@item.KhoaHocDeXuat</td>
                    <td>
                        @if (item.TrangThai == "Chờ xác nhận")
                        {
                            <span class="badge bg-warning text-dark">@item.TrangThai</span>
                        }
                        else
                        {
                            <span class="badge bg-success">@item.TrangThai</span>
                        }
                    </td>
                    <td>
                        @if (item.TrangThai == "Chờ xác nhận")
                        {
                            <form asp-action="XacNhan" method="post" class="d-inline">
                                <input type="hidden" name="id" value="@item.MaTest" />
                                <button type="submit" class="btn btn-success btn-sm">
                                    <i class="bi bi-check2-circle me-1"></i> Xác nhận
                                </button>
                            </form>
                        }
                        else
                        {
                            <span class="text-success fw-semibold">Đã xác nhận</span>
                        }
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
