@model IEnumerable<EnlightEnglishCenter.Models.NguoiDung>

@{
    ViewData["Title"] = "Quản lý người dùng";
}

<div class="container mt-4">
    <h3 class="mb-4 text-primary text-center">
        <i class="fa-solid fa-users me-2"></i> Quản lý người dùng
    </h3>

    <a href="#" class="btn btn-success mb-3">
        <i class="fa-solid fa-user-plus me-1"></i> Thêm người dùng
    </a>

    <!-- Hiển thị thông báo -->
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success">@TempData["SuccessMessage"]</div>
    }
    else if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger">@TempData["ErrorMessage"]</div>
    }

    <table class="table table-bordered table-striped text-center align-middle">
        <thead class="table-primary">
            <tr>
                <th>#</th>
                <th>Tên đăng nhập</th>
                <th>Họ tên</th>
                <th>Vai trò</th>
                <th>Email</th>
                <th>Trạng thái</th>
                <th>Thao tác</th>
            </tr>
        </thead>
        <tbody>
            @if (Model != null && Model.Any())
            {
                int stt = 1;
                foreach (var u in Model)
                {
                    <tr>
                        <td>@(stt++)</td>
                        <td>@u.TenDangNhap</td>
                        <td>@u.HoTen</td>
                        <td>@u.MaVaiTroNavigation?.TenVaiTro</td>
                        <td>@u.Email</td>
                        <td>
                            @(u.TrangThai == "true" ? "Hoạt động" : "Khóa")
                        </td>
                        <td>
                            <a href="#" class="btn btn-sm btn-warning">
                                <i class="fa-solid fa-pen"></i>
                            </a>

                            <!-- Nút Xóa người dùng -->
                            <form asp-action="DeleteNguoiDung" asp-route-id="@u.MaNguoiDung" method="post" class="d-inline"
                                  onsubmit="return confirm('⚠️ Bạn có chắc muốn xóa người dùng này không?\n\nLưu ý: Tất cả dữ liệu học viên, điểm số và bài test sẽ bị xóa!');">
                                <button type="submit" class="btn btn-sm btn-danger">
                                    <i class="fa-solid fa-trash"></i>
                                </button>
                            </form>
                        </td>
                    </tr>
                }
            }
            else
            {
                <tr><td colspan="7" class="text-muted">Chưa có dữ liệu người dùng</td></tr>
            }
        </tbody>
    </table>
</div>
