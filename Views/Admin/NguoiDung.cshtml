@model IEnumerable<EnlightEnglishCenter.Models.NguoiDung>

@{
    ViewData["Title"] = "Quản lý người dùng";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-4">
    <h3 class="mb-4 text-primary text-center">
        <i class="fa-solid fa-users me-2"></i> Quản lý người dùng
    </h3>

    <a href="#" class="btn btn-success mb-3">
        <i class="fa-solid fa-user-plus me-1"></i> Thêm người dùng
    </a>

    <table class="table table-bordered table-striped text-center align-middle">
        <thead class="table-primary">
            <tr>
                <th>#</th>
                <th>Tên đăng nhập</th>
                <th>Họ tên</th>
                <th>Vai trò</th>
                <th>Email</th>
                <th>Trạng thái</th>
                <th>Thao tác</th>
            </tr>
        </thead>
        <tbody>
            @if (Model != null && Model.Any())
            {
                int stt = 1;
                foreach (var u in Model)
                {
                    <tr>
                        <td>@(stt++)</td>
                        <td>@u.TenDangNhap</td>
                        <td>@u.HoTen</td>
                        <td>@u.MaVaiTroNavigation?.TenVaiTro</td>
                        <td>@u.Email</td>
                        @(u.TrangThai == "true" ? "Hoạt động" : "Khóa")

                        <td>
                            <a href="#" class="btn btn-sm btn-primary"><i class="fa-solid fa-pen"></i></a>
                            <a href="#" class="btn btn-sm btn-danger"><i class="fa-solid fa-trash"></i></a>
                        </td>
                    </tr>
                }
            }
            else
            {
                <tr><td colspan="7" class="text-muted">Chưa có dữ liệu người dùng</td></tr>
            }
        </tbody>
    </table>
</div>
