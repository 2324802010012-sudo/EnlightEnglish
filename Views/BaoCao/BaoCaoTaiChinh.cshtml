@{
    ViewData["Title"] = "Báo cáo tài chính tổng hợp";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="container mt-4">
    <h2 class="fw-bold text-center text-primary mb-4">
        <i class="fa-solid fa-chart-line me-2"></i> Báo cáo tài chính trung tâm
    </h2>

    <!-- THẺ TỔNG QUAN -->
    <div class="row text-center mb-4">
        <div class="col-md-4">
            <div class="card border-success shadow-sm">
                <div class="card-body">
                    <h6 class="text-success">💰 Tổng học phí thu được</h6>
                    <h4 class="fw-bold text-success">@string.Format("{0:N0} đ", ViewBag.TongHocPhi)</h4>
                    <small>@ViewBag.SoHocVienDaDong học viên đã thanh toán</small>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card border-warning shadow-sm">
                <div class="card-body">
                    <h6 class="text-warning">💵 Tổng chi lương giáo viên</h6>
                    <h4 class="fw-bold text-warning">@string.Format("{0:N0} đ", ViewBag.TongLuong)</h4>
                    <small>@ViewBag.SoGiaoVien giáo viên được tính</small>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card border-primary shadow-sm">
                <div class="card-body">
                    <h6 class="text-primary">📈 Lợi nhuận tạm tính</h6>
                    <h4 class="fw-bold text-primary">@string.Format("{0:N0} đ", ViewBag.LoiNhuan)</h4>
                </div>
            </div>
        </div>
    </div>

    <!-- BÁO CÁO LỄ TÂN -->
    <div class="card shadow-sm mb-5">
        <div class="card-header bg-success text-white fw-bold">
            <i class="fa-solid fa-cash-register me-2"></i> Báo cáo học phí (Lễ tân)
        </div>
        <div class="card-body p-0">
            <table class="table table-striped table-hover align-middle mb-0">
                <thead class="table-success text-center">
                    <tr>
                        <th>#</th>
                        <th>Ngày lập</th>
                        <th>Người lập</th>
                        <th>Nội dung</th>
                    </tr>
                </thead>
                <tbody>
                    @{
                        var leTanList = (IEnumerable<EnlightEnglishCenter.Models.BaoCao>)ViewBag.BaoCaoLeTan;
                        int i = 1;
                        foreach (var bc in leTanList)
                        {
                            <tr>
                                <td class="text-center">@i</td>
                                <td class="text-center">@bc.NgayLap.ToString("dd/MM/yyyy")</td>
                                <td class="text-center">@bc.NguoiLapNavigation?.HoTen</td>
                                <td>@bc.NoiDung</td>
                            </tr>
                            i++;
                        }
                    }
                </tbody>
            </table>
        </div>
    </div>

    <!-- BÁO CÁO KẾ TOÁN -->
    <div class="card shadow-sm mb-5">
        <div class="card-header bg-warning text-dark fw-bold">
            <i class="fa-solid fa-hand-holding-dollar me-2"></i> Báo cáo lương giáo viên (Kế toán)
        </div>
        <div class="card-body p-0">
            <table class="table table-striped table-hover align-middle mb-0">
                <thead class="table-warning text-center">
                    <tr>
                        <th>#</th>
                        <th>Ngày lập</th>
                        <th>Người lập</th>
                        <th>Nội dung</th>
                    </tr>
                </thead>
                <tbody>
                    @{
                        var keToanList = (IEnumerable<EnlightEnglishCenter.Models.BaoCao>)ViewBag.BaoCaoKeToan;
                        int j = 1;
                        foreach (var bc in keToanList)
                        {
                            <tr>
                                <td class="text-center">@j</td>
                                <td class="text-center">@bc.NgayLap.ToString("dd/MM/yyyy")</td>
                                <td class="text-center">@bc.NguoiLapNavigation?.HoTen</td>
                                <td>@bc.NoiDung</td>
                            </tr>
                            j++;
                        }
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
