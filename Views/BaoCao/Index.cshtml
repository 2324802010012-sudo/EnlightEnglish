@model IEnumerable<EnlightEnglishCenter.Models.BaoCao>

@{
    ViewData["Title"] = "Danh sách báo cáo";
}

<div class="container mt-4">
    <h3 class="text-primary text-center mb-4 fw-bold">
        <i class="fa-solid fa-file-lines me-2"></i> Danh sách báo cáo
    </h3>

    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger text-center">@TempData["Error"]</div>
    }

    <table class="table table-bordered table-hover align-middle shadow-sm">
        <thead class="table-primary text-center">
            <tr>
                <th style="width:50px;">#</th>
                <th style="width:180px;">Tên báo cáo</th>
                <th style="width:160px;">Loại báo cáo</th>
                <th style="width:120px;">Ngày lập</th>
                <th style="width:180px;">Người lập</th>
                <th>Nội dung</th>
            </tr>
        </thead>
        <tbody>
            @if (Model != null && Model.Any())
            {
                int stt = 1;
                foreach (var bc in Model)
                {
                    // Gợi ý: phân loại màu theo loại báo cáo
                    var loai = bc.LoaiBaoCao?.ToLower() ?? "";
                    var badgeClass = loai.Contains("lương") ? "bg-warning text-dark" :
                    loai.Contains("doanh thu") ? "bg-success text-white" :
                    "bg-secondary text-white";

                    <tr>
                        <td class="text-center fw-bold">@stt</td>
                        <td class="fw-semibold text-primary">@bc.LoaiBaoCao</td>

                        <td>
                            <span class="badge @badgeClass">@bc.LoaiBaoCao</span>
                        </td>
                        <td>@bc.NgayLap.ToString("dd/MM/yyyy")</td>
                        <td>@bc.NguoiLapNavigation?.HoTen</td>
                        <td class="text-start">@bc.NoiDung</td>
                    </tr>
                    stt++;
                }
            }
            else
            {
                <tr>
                    <td colspan="6" class="text-muted text-center py-3">
                        Không có dữ liệu báo cáo để hiển thị.
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
