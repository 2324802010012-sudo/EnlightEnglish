@model IEnumerable<EnlightEnglishCenter.Models.KhoaHoc>

<div class="container py-5">
    <!-- 🧩 Tiêu đề -->
    <h2 class="text-center text-primary fw-bold mb-3">
        <i class="fa-solid fa-clipboard-list me-2"></i>Đăng ký Test đầu vào
    </h2>
    <p class="text-center text-muted mb-5">
        Chọn khóa học bạn muốn kiểm tra năng lực để được xếp lớp phù hợp 👇
    </p>

    <!-- 🧩 Danh sách khóa học -->
    <div class="row g-4 justify-content-center">
        @{
            var dsTest = ViewBag.DanhSachTest as List<EnlightEnglishCenter.Models.TestDauVao> ?? new();
        }

        @foreach (var k in Model)
        {
            var test = dsTest.FirstOrDefault(t => t.KhoaHocDeXuat == k.MaKhoaHoc);
            string html;

            if (test == null)
            {
                // ✅ Chưa đăng ký → hiện nút đăng ký
                html = $@"
                <form asp-action='DangKy' method='get'>
                <input type='hidden' name='maKhoaHoc' value='{k.MaKhoaHoc}' />
                <button type='submit' class='btn btn-primary rounded-pill px-4 mt-2'>
                <i class='fa-solid fa-pen-to-square me-1'></i> Đăng ký Test
                </button>
                </form>";
            }
            else if (test.TrangThai == "Chờ xác nhận")
            {
                html = "<span class='badge bg-warning text-dark rounded-pill px-3 py-2'><i class='fa fa-clock me-1'></i>Chờ duyệt</span>";
            }
            else if (test.TrangThai == "Được phép test")
            {
                html = "<a href='/TestDauVao/LamBai' class='btn btn-success rounded-pill px-4 mt-2'><i class='fa fa-play me-1'></i> Làm bài Test</a>";
            }
            else if (test.TrangThai == "Hoàn thành")
            {
                html = $"<a href='/TestDauVao/KetQua?id={test.MaTest}' class='btn btn-outline-info rounded-pill px-4 mt-2'><i class='fa fa-check-circle me-1'></i> Xem kết quả</a>";
            }
            else
            {
                html = "<span class='text-muted'>Không xác định</span>";
            }

            <div class="col-md-4 col-lg-3">
                <div class="card border-0 shadow-sm rounded-4 h-100 hover-shadow-sm">
                    <div class="card-body text-center p-4">
                        <h5 class="fw-bold text-dark mb-2">@k.TenKhoaHoc</h5>
                        <p class="text-muted small mb-3">@k.MoTa</p>
                        @Html.Raw(html)
                    </div>
                </div>
            </div>
        }
    </div>

    <!-- 🧩 Thông báo -->
    <div class="mt-5">
        @if (TempData["Success"] != null)
        {
            <div class="alert alert-success text-center rounded-pill shadow-sm fade show">
                <i class="fa-solid fa-circle-check me-2"></i>@TempData["Success"]
            </div>
        }
        else if (TempData["Error"] != null)
        {
            <div class="alert alert-danger text-center rounded-pill shadow-sm fade show">
                <i class="fa-solid fa-triangle-exclamation me-2"></i>@TempData["Error"]
            </div>
        }
    </div>
</div>

<style>
    .hover-shadow-sm:hover {
        box-shadow: 0 6px 20px rgba(0, 0, 0, 0.08);
        transform: translateY(-2px);
        transition: 0.2s;
    }
</style>
