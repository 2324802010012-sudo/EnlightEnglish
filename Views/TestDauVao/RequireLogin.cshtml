@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Thông báo - ENLIGHT</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" />
</head>
<body class="d-flex align-items-center justify-content-center vh-100 bg-light">
    <div class="text-center bg-white p-5 rounded shadow" style="max-width: 420px;">
        <i class="bi bi-exclamation-circle text-warning display-4 mb-3"></i>
        <h4 class="text-danger fw-bold mb-3">Yêu cầu đăng ký tài khoản</h4>
        <p class="text-secondary mb-4">@ViewBag.Message</p>
        <a href="/Account/Register" class="btn btn-primary w-100">Đăng ký ngay</a>
        <div class="mt-3">
            <a href="/Account/Login" class="text-decoration-none text-secondary small">Đã có tài khoản? Đăng nhập</a>
        </div>
    </div>
</body>
</html>
