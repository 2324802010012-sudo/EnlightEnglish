@model IEnumerable<EnlightEnglishCenter.Models.TestDauVao>

@{
    ViewData["Title"] = "Danh sách Test đầu vào";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="container mt-5">
    <div class="text-center mb-4">
        <h2 class="fw-bold text-primary">
            <i class="fa-solid fa-list-check me-2"></i>Danh sách học viên đăng ký Test đầu vào
        </h2>
        <p class="text-muted">
            Admin hoặc Phòng đào tạo có thể duyệt, xem trạng thái và cho phép học viên làm bài test.
        </p>
    </div>

    <div class="table-responsive shadow-sm">
        <table class="table table-bordered table-hover text-center align-middle mb-0">
            <thead class="table-primary">
                <tr>
                    <th>Họ tên</th>
                    <th>Email</th>
                    <th>Ngày đăng ký</th>
                    <th>Khóa học đề xuất</th>
                    <th>Trạng thái</th>
                    <th>Thao tác</th>
                </tr>
            </thead>

            <tbody>
                @if (Model != null && Model.Any())
                {
                    foreach (var item in Model)
                    {
                        <tr>
                            <td>@(item.HocVien?.HoTen ?? "—")</td>
                            <td>@(item.HocVien?.Email ?? "—")</td>
                            <td>
                                @(item.NgayTest.HasValue
                                                        ? item.NgayTest.Value.ToString("dd/MM/yyyy")
                                                        : "—")
                    </td>

                            <!-- ✅ Hiển thị tên khóa học -->
                            <td>@(item.KhoaHocDeXuatNavigation?.TenKhoaHoc ?? "—")</td>

                            <!-- ✅ Màu trạng thái -->
                            <td>
                        @switch (item.TrangThai)
                                {
                                    case "Chờ xác nhận":
                                        <span class="badge bg-warning text-dark">Chờ duyệt</span>
                                        ;
                                        break;
                                    case "Được phép test":
                                        <span class="badge bg-primary">Được phép test</span>
                                        ;
                                        break;
                                    case "Hoàn thành":
                                        <span class="badge bg-success">Hoàn thành</span>
                                        ;
                                        break;
                                    default:
                                        <span class="badge bg-secondary">—</span>
                                        ;
                                        break;
                                }
                            </td>

                            <!-- ✅ Cột thao tác -->
                            <td>
                                @if (item.TrangThai == "Chờ xác nhận")
                                {
                                    <form asp-action="DuyetTest" method="post" class="d-inline">
                                        <input type="hidden" name="id" value="@item.MaTest" />
                                        <button type="submit" class="btn btn-success btn-sm">
                                            <i class="fa-solid fa-check me-1"></i> Duyệt Test
                                        </button>
                                    </form>
                                }
                                else if (item.TrangThai == "Được phép test")
                                {
                                    <a asp-controller="TestDauVao" asp-action="LamBai"
                                       class="btn btn-primary btn-sm">
                                        <i class="fa-solid fa-pen-to-square me-1"></i> Làm bài test ngay
                                    </a>
                                }
                                else if (item.TrangThai == "Hoàn thành")
                                {
                                    <a asp-controller="TestDauVao" asp-action="KetQua"
                                       class="btn btn-success btn-sm">
                                        <i class="fa-solid fa-chart-line me-1"></i> Xem kết quả
                                    </a>
                                }
                                else
                                {
                                    <span class="text-muted">—</span>
                                }
                            </td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="6" class="text-center text-muted py-4">
                            <i class="fa-regular fa-face-frown me-2"></i>
                            Chưa có học viên nào đăng ký test đầu vào.
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <div class="mt-4 text-end">
        <a asp-controller="Home" asp-action="Index" class="btn btn-secondary">
            <i class="fa-solid fa-arrow-left me-1"></i> Quay lại trang chủ
        </a>
    </div>
</div>
