@model EnlightEnglishCenter.Models.TestDauVao

@{
    ViewData["Title"] = "Kết quả Test đầu vào";
}

<div class="container py-5 text-center">
    <h2 class="fw-bold text-primary mb-4">
        <i class="fa-solid fa-square-poll-vertical me-2"></i> Kết quả Test đầu vào
    </h2>

    <div class="card shadow-sm p-4 border-0 mx-auto" style="max-width: 600px;">
        <p><b>Học viên:</b> @((Model.HocVien?.HoTen) ?? "Không xác định")</p>
        <p><b>Khóa học đăng ký:</b> @((Model.KhoaHocDeXuatNavigation?.TenKhoaHoc) ?? "Không có")</p>

        <p>
            <b>Điểm bài test:</b>
            <span class="fw-bold text-success">
                @((Model.TongDiem.HasValue ? Model.TongDiem.Value.ToString("0.0") : "Chưa có"))
            </span>
        </p>

        @if (!string.IsNullOrWhiteSpace(Model.LoTrinhHoc))
        {
            <p>
                <b>Lộ trình đề xuất:</b>
                <span class="fw-bold text-primary">@Model.LoTrinhHoc</span>
            </p>
        }
        else
        {
            <p><b>Lộ trình đề xuất:</b> <span class="text-muted">Đang cập nhật...</span></p>
        }

        <div class="mt-4">
            <a asp-controller="HocVien" asp-action="Index" class="btn btn-outline-primary">
                <i class="fa-solid fa-house me-2"></i> Quay về trang học viên
            </a>

            @if (!string.IsNullOrWhiteSpace(Model.LoTrinhHoc))
            {
                <a asp-controller="ThanhToan" asp-action="Index" asp-route-lop="@Model.LoTrinhHoc" class="btn btn-success ms-2">
                    <i class="fa-solid fa-credit-card me-2"></i> Thanh toán học phí lộ trình @Model.LoTrinhHoc
                </a>
            }
        </div>
    </div>
</div>
