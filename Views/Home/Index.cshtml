<!-- ✨ CSS -->
<style>
    .banner {
        height: 90vh;
        overflow: hidden;
        position: relative;
    }

    .banner-img {
        width: 100%;
        height: 100%;
        object-fit: cover;
        filter: brightness(60%);
    }

    .banner-overlay {
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        background: rgba(0,0,0,0.4);
    }

    .banner-content {
        position: absolute;
        top: 50%;
        left: 50%;
        transform: translate(-50%,-50%);
        color: #fff;
    }

    .slogan {
        font-size: 1.5rem;
        animation: fadeUp 1.2s ease-out;
        color: #00c6ff;
        text-shadow: 0 0 10px rgba(255,255,255,0.3);
    }
    @@keyframes fadeUp {
        0%

    {
        opacity: 0;
        transform: translateY(40px);
    }

    100% {
        opacity: 1;
        transform: translateY(0);
    }
    }

    /* ========== KHÓA HỌC========== */
    .courses .card-img-top {
        height: 230px;
        width: 100%;
        object-fit: cover;
        border-bottom: 3px solid #007bff;
    }
    /* ========== THÀNH TỰU ========== */
    .achievements {
        background: linear-gradient(90deg, #007bff, #00bcd4);
        color: white;
        padding: 60px 0;
    }

        .achievements .stat-box {
            transition: all 0.3s ease;
            color: #fff;
        }

            .achievements .stat-box:hover {
                transform: translateY(-6px);
            }

        .achievements i {
            font-size: 2.5rem;
            color: #fff;
            margin-bottom: 10px;
        }

        .achievements h3 {
            font-size: 2rem;
            font-weight: 700;
            background: rgba(255, 255, 255, 0.15);
            display: inline-block;
            padding: 5px 20px;
            border-radius: 10px;
        }

        .achievements p {
            margin-top: 8px;
            font-size: 1rem;
            color: #f1f1f1;
        }
    /* ========== GIÁO VIÊN ========== */
    .teacher-card {
        background: #fff;
        border: none;
        border-radius: 20px;
        overflow: hidden;
        transition: transform 0.3s ease, box-shadow 0.3s ease;
        box-shadow: 0 4px 10px rgba(0,0,0,0.08);
    }

        .teacher-card:hover {
            transform: translateY(-8px);
            box-shadow: 0 10px 22px rgba(0,0,0,0.15);
        }

    .teacher-img {
        width: 100%;
        height: 300px;
        object-fit: cover;
        border-radius: 15px;
    }

    .teachers h2 {
