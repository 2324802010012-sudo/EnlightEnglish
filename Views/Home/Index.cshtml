@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Trang chủ";
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css" rel="stylesheet" />
}

@if (TempData["Success"] != null)
{
    <div class="alert alert-success alert-dismissible fade show text-center mt-3" role="alert">
        @TempData["Success"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

@if (TempData["Error"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show text-center mt-3" role="alert">
        @TempData["Error"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

<!-- 🌟 BANNER -->
<!-- 🌟 BANNER SLIDER -->
<section id="banner" class="banner-slider position-relative">
    <div id="bannerCarousel" class="carousel slide carousel-fade" data-bs-ride="carousel" data-bs-interval="3500">
        <div class="carousel-inner">

            <!-- Ảnh 1 -->
            <div class="carousel-item active">
                <img src="~/WebTTImages/banner.jpg" class="d-block w-100 banner-img" alt="Banner Enlight 1">
                <div class="carousel-caption d-none d-md-block">
                    <h1 class="fw-bold display-5 text-uppercase">Trung tâm Anh ngữ Enlight</h1>
                    <p class="lead">Never let your fear decide your fate.</p>
                </div>
            </div>

            <!-- Ảnh 2 -->
            <div class="carousel-item">
                <img src="~/WebTTImages/banner2.jpg" class="d-block w-100 banner-img" alt="Banner Enlight 2">
                <div class="carousel-caption d-none d-md-block">
                    <h1 class="fw-bold display-5 text-uppercase">Khởi đầu hành trình chinh phục tiếng Anh</h1>
                    <p class="lead">Cùng Enlight nâng tầm kỹ năng giao tiếp quốc tế.</p>
                </div>
            </div>

            <!-- Ảnh 3 -->
            <div class="carousel-item">
                <img src="~/WebTTImages/banner3.png" class="d-block w-100 banner-img" alt="Banner Enlight 3">
                <div class="carousel-caption d-none d-md-block">
                    <h1 class="fw-bold display-5 text-uppercase">Lớp học trực tuyến hiện đại</h1>
                    <p class="lead">Tương tác trực tiếp cùng giáo viên kinh nghiệm.</p>
                </div>
            </div>

        </div>

        <!-- Nút điều hướng -->
        <button class="carousel-control-prev" type="button" data-bs-target="#bannerCarousel" data-bs-slide="prev">
            <span class="carousel-control-prev-icon"></span>
        </button>
        <button class="carousel-control-next" type="button" data-bs-target="#bannerCarousel" data-bs-slide="next">
            <span class="carousel-control-next-icon"></span>
        </button>
    </div>
</section>


<!-- 🟦 KHÓA HỌC NỔI BẬT -->
<section id="khoahoc" class="courses py-5 bg-light">
    <div class="container">
        <h2 class="text-center fw-bold mb-5 text-uppercase text-primary">Các khóa học nổi bật</h2>
        <div class="row g-4">
            <div class="col-md-4">
                <div class="card h-100 shadow-sm border-0">
                    <img src="~/WebTTImages/ielts.jpg" class="card-img-top" alt="Khóa học IELTS">
                    <div class="card-body text-center">
                        <h5 class="card-title fw-bold text-uppercase text-primary">Khóa học IELTS</h5>
                        <p class="card-text text-muted">Luyện 4 kỹ năng Nghe – Nói – Đọc – Viết theo chuẩn quốc tế.</p>
                        <a href="/Courses/IELTS" class="btn btn-primary mt-2">Xem chi tiết</a>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card h-100 shadow-sm border-0">
                    <img src="~/WebTTImages/toeic.jpg" class="card-img-top" alt="Khóa học TOEIC">
                    <div class="card-body text-center">
                        <h5 class="card-title fw-bold text-uppercase text-primary">Khóa học TOEIC</h5>
                        <p class="card-text text-muted">Phát triển kỹ năng giao tiếp và từ vựng thương mại, hướng đến mục tiêu 600–900 điểm TOEIC.</p>
                        <a href="/Courses/TOEIC" class="btn btn-primary mt-2">Xem chi tiết</a>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card h-100 shadow-sm border-0">
                    <img src="~/WebTTImages/cambridge.jpg" class="card-img-top" alt="Khóa học Cambridge">
                    <div class="card-body text-center">
                        <h5 class="card-title fw-bold text-uppercase text-primary">Khóa học Cambridge</h5>
                        <p class="card-text text-muted">Dành cho trẻ em và thiếu niên, học tiếng Anh qua hoạt động tương tác.</p>
                        <a href="/Courses/Cambridge" class="btn btn-primary mt-2">Xem chi tiết</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- 🏆 THÀNH TỰU -->
<section class="achievements text-white py-5">
    <div class="container text-center">
        <div class="row g-4 justify-content-center">
            <div class="col-md-3">
                <div class="stat-box">
                    <i class="bi bi-people-fill fs-1 mb-2"></i>
                    <h3 class="fw-bold">5000+</h3>
                    <p>Học viên đã theo học</p>
                </div>
            </div>
            <div class="col-md-3">
                <div class="stat-box">
                    <i class="bi bi-journal-check fs-1 mb-2"></i>
                    <h3 class="fw-bold">200+</h3>
                    <p>Khóa học chất lượng</p>
                </div>
            </div>
            <div class="col-md-3">
                <div class="stat-box">
                    <i class="bi bi-mortarboard-fill fs-1 mb-2"></i>
                    <h3 class="fw-bold">98%</h3>
                    <p>Đạt mục tiêu đầu ra</p>
                </div>
            </div>
            <div class="col-md-3">
                <div class="stat-box">
                    <i class="bi bi-globe fs-1 mb-2"></i>
                    <h3 class="fw-bold">10+</h3>
                    <p>Năm kinh nghiệm giảng dạy</p>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- 💡 LÝ DO CHỌN ENLIGHT -->
<section class="why-enlight py-5">
    <div class="container text-center">
        <h2 class="fw-bold text-uppercase text-primary mb-5">Vì sao nên chọn ENLIGHT?</h2>
        <div class="row g-4">
            <div class="col-md-3">
                <div class="feature p-4 rounded-4 shadow-sm h-100">
                    <i class="bi bi-award fs-1 text-primary mb-3"></i>
                    <h5 class="fw-bold">Giảng viên chất lượng</h5>
                    <p class="text-muted small">100% giáo viên đạt chứng chỉ quốc tế và giàu kinh nghiệm giảng dạy.</p>
                </div>
            </div>
            <div class="col-md-3">
                <div class="feature p-4 rounded-4 shadow-sm h-100">
                    <i class="bi bi-book-half fs-1 text-primary mb-3"></i>
                    <h5 class="fw-bold">Giáo trình hiện đại</h5>
                    <p class="text-muted small">Bám sát khung Cambridge & ETS, cập nhật đề thi mới nhất.</p>
                </div>
            </div>
            <div class="col-md-3">
                <div class="feature p-4 rounded-4 shadow-sm h-100">
                    <i class="bi bi-laptop fs-1 text-primary mb-3"></i>
                    <h5 class="fw-bold">Học trực tuyến linh hoạt</h5>
                    <p class="text-muted small">Học mọi lúc, mọi nơi với hệ thống lớp học trực tuyến chất lượng cao.</p>
                </div>
            </div>
            <div class="col-md-3">
                <div class="feature p-4 rounded-4 shadow-sm h-100">
                    <i class="bi bi-graph-up fs-1 text-primary mb-3"></i>
                    <h5 class="fw-bold">Cam kết đầu ra</h5>
                    <p class="text-muted small">Học viên được đảm bảo kết quả theo lộ trình đã tư vấn từ đầu.</p>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- 🧑‍🏫 GIÁO VIÊN -->
<section class="teachers py-5 bg-light reveal">
    <div class="container">
        <h2 class="text-center fw-bold text-uppercase text-primary mb-5">Đội ngũ giáo viên giàu kinh nghiệm</h2>
        <div class="row text-center g-4">
            <div class="col-md-4"><div class="teacher-card p-4 rounded-4 shadow-sm"><img src="~/WebTTImages/teacher1.jpg" class="teacher-img mb-3" /><h5 class="fw-bold text-dark">Cô Vũ Mai Phương</h5><p class="text-muted">Chuyên gia luyện thi IELTS & Ngữ pháp</p></div></div>
            <div class="col-md-4"><div class="teacher-card p-4 rounded-4 shadow-sm"><img src="~/WebTTImages/teacher2.jpg" class="teacher-img mb-3" /><h5 class="fw-bold text-dark">Thầy Tiểu Đạt</h5><p class="text-muted">Giảng viên TOEIC & Giao tiếp công sở</p></div></div>
            <div class="col-md-4"><div class="teacher-card p-4 rounded-4 shadow-sm"><img src="~/WebTTImages/teacher3.jpg" class="teacher-img mb-3" /><h5 class="fw-bold text-dark">Cô Hoàng Xuân</h5><p class="text-muted">Giảng viên tiếng Anh thiếu nhi & Phát âm</p></div></div>
        </div>
    </div>
</section>
<!-- 💬 CẢM NHẬN -->
<section class="testimonials py-5 bg-white reveal">
    <div class="container text-center">
        <h2 class="fw-bold text-uppercase text-primary mb-5">Cảm nhận học viên & phụ huynh</h2>
        <div class="row g-4">
            <div class="col-md-4"><div class="testimonial p-4 shadow-sm rounded-4 h-100"><img src="~/WebTTImages/student1.jpg" class="testimonial-img mb-3"><p class="text-muted fst-italic">“Khóa học IELTS giúp mình cải thiện kỹ năng viết rất nhanh, giáo viên hỗ trợ tận tâm!”</p><h6 class="fw-bold mb-0 text-primary">Minh Anh</h6><small class="text-muted">Học viên IELTS 7.5</small></div></div>
            <div class="col-md-4"><div class="testimonial p-4 shadow-sm rounded-4 h-100"><img src="~/WebTTImages/student3.jpg" class="testimonial-img mb-3"><p class="text-muted fst-italic">“Con tôi học tiếng Anh thiếu nhi ở đây, cô giáo rất thân thiện và con tiến bộ rõ rệt!”</p><h6 class="fw-bold mb-0 text-primary">Chị Ngọc Huyền</h6><small class="text-muted">Phụ huynh học viên Kids Star</small></div></div>
            <div class="col-md-4"><div class="testimonial p-4 shadow-sm rounded-4 h-100"><img src="~/WebTTImages/student2.jpg" class="testimonial-img mb-3"><p class="text-muted fst-italic">“Mình rất thích lớp giao tiếp của thầy Đạt, không khí học vui mà vẫn hiệu quả!”</p><h6 class="fw-bold mb-0 text-primary">Quốc Bảo</h6><small class="text-muted">Học viên TOEIC Speaking</small></div></div>
        </div>
    </div>
</section>


<!-- 📞 HỖ TRỢ -->
<section id="lienhe" class="support-section py-5">
    <div class="container">
        <div class="row align-items-center justify-content-center g-5">
            <div class="col-md-5 text-center">
                <img src="~/WebTTImages/support.jpg" class="img-fluid rounded-4 shadow-lg border border-3 border-light" />
            </div>
            <div class="col-md-6">
                <div class="p-5 rounded-4 shadow-lg bg-white">
                    <h2 class="fw-bold text-uppercase text-primary mb-3 text-center">
                        Đăng ký nhận tư vấn <span class="text-gradient">miễn phí</span>
                    </h2>
                    <p class="text-muted text-center mb-4">
                        Đội ngũ tư vấn <b>ENLIGHT</b> sẽ liên hệ trong vòng <b>24 giờ</b> để hỗ trợ chọn khóa học phù hợp nhất.
                    </p>
                    <form asp-action="DangKyHoTro" asp-controller="Home" method="post">
                        <input type="text" name="HoTen" class="form-control form-control-lg mb-3 rounded-3" placeholder="Họ tên của bạn" required />
                        <input type="email" name="Email" class="form-control form-control-lg mb-3 rounded-3" placeholder="Email" required />
                        <input type="tel" name="SoDienThoai" class="form-control form-control-lg mb-4 rounded-3" placeholder="Số điện thoại" required />
                        <div class="text-center">
                            <button type="submit" class="btn btn-gradient px-5 py-2 rounded-pill fw-bold">
                                <i class="bi bi-send-fill"></i> Gửi đăng ký
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- 🌈 CSS -->
<style>
    html {
        scroll-behavior: smooth;
    }

    /* Banner */
    .banner {
        height: 90vh;
        position: relative;
        overflow: hidden;
    }

    .banner-img {
        width: 100%;
        height: 100%;
        object-fit: cover;
        filter: brightness(60%);
    }

    .banner-overlay {
        position: absolute;
        inset: 0;
        background: rgba(0,0,0,0.45);
    }

    .banner-content {
        position: absolute;
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%);
        color: white;
    }

    .slogan {
        font-size: 1.5rem;
        color: #00c6ff;
        text-shadow: 0 0 10px rgba(255,255,255,0.3);
    }

    /* Courses */
    .courses .card-img-top {
        height: 230px;
        object-fit: cover;
        border-bottom: 3px solid #007bff;
    }

    .courses .card:hover {
        transform: translateY(-5px);
        transition: .3s;
    }

    /* Achievements */
    .achievements {
        background: linear-gradient(90deg, #007bff, #00bcd4);
        color: #fff;
    }

    .stat-box:hover {
        transform: translateY(-5px);
        transition: .3s;
    }

    /* Teachers */
    .teacher-card {
        background: #fff;
        border-radius: 20px;
        box-shadow: 0 4px 10px rgba(0,0,0,0.08);
        transition: .3s;
    }

        .teacher-card:hover {
            transform: translateY(-8px);
            box-shadow: 0 10px 22px rgba(0,0,0,0.15);
        }

    .teacher-img {
        height: 300px;
        width: 100%;
        object-fit: cover;
        border-radius: 15px;
    }

    /* Testimonials */
    .testimonial {
        border: 1px solid #eee;
        border-radius: 20px;
        transition: .3s;
    }

        .testimonial:hover {
            transform: translateY(-6px);
            box-shadow: 0 8px 20px rgba(0,0,0,0.1);
        }

    .testimonial-img {
        width: 90px;
        height: 90px;
        border-radius: 50%;
        border: 4px solid #007bff;
        object-fit: cover;
    }

    /* Support */
    .btn-gradient {
        background: linear-gradient(90deg, #007bff, #00c6ff);
        color: white;
        border: none;
    }

        .btn-gradient:hover {
            background: linear-gradient(90deg, #00c6ff, #007bff);
        }

    .text-gradient {
        background: linear-gradient(90deg, #007bff, #00c6ff);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
    }

    .banner-slider {
        height: 90vh;
        overflow: hidden;
    }

        .banner-slider .carousel-item {
            height: 90vh;
        }

        .banner-slider .banner-img {
            width: 100%;
            height: 100%;
            object-fit: cover;
            filter: brightness(60%);
        }

    .carousel-caption {
        bottom: 25%;
    }

        .carousel-caption h1 {
            text-shadow: 2px 2px 8px rgba(0,0,0,0.6);
        }

        .carousel-caption p {
            color: #00c6ff;
            font-weight: 500;
            text-shadow: 0 0 10px rgba(255,255,255,0.4);
        }

</style>
