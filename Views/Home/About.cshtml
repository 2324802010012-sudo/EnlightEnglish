<!-- ========== CSS ========== -->
<style>
    /* Banner Giới thiệu - tinh chỉnh */
    .banner-about {
        position: relative;
        height: 420px; /* Tăng nhẹ chiều cao để cân với màn hình */
        overflow: hidden;
        border-radius: 18px;
    }

    .banner-about-img {
        width: 100%;
        height: 100%;
        object-fit: cover;
        filter: brightness(75%);
        transition: transform 0.6s ease;
    }

    .banner-about:hover .banner-about-img {
        transform: scale(1.06);
    }

    .banner-about-overlay {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
        text-align: center;
        padding: 0 15px;
    }

        .banner-about-overlay h2 {
            font-size: 2.3rem;
            color: #fff;
            text-shadow: 0 0 10px rgba(0,0,0,0.4);
            margin-bottom: 0.5rem;
        }

        .banner-about-overlay p {
            color: #dbeafe;
            font-size: 1.1rem;
            font-style: italic;
        }

    /* Hộp giá trị cốt lõi */
    .value-box:hover {
        transform: translateY(-6px);
        box-shadow: 0 8px 18px rgba(0,0,0,0.15);
        transition: 0.3s;
    }

    /* Hiệu ứng ảnh */
    .vision-mission img,
    .about-section img {
        transition: transform 0.4s ease, box-shadow 0.4s ease;
    }

        .vision-mission img:hover,
        .about-section img:hover {
            transform: scale(1.03);
            box-shadow: 0 10px 25px rgba(0,0,0,0.15);
        }
    /* Timeline */
    .timeline {
        position: relative;
        max-width: 900px;
        margin: auto;
    }

        .timeline::after {
            content: '';
            position: absolute;
            width: 4px;
            background-color: #0d6efd;
            top: 0;
            bottom: 0;
            left: 50%;
            margin-left: -2px;
        }

    .timeline-item {
        padding: 10px 30px;
        position: relative;
        width: 50%;
    }

        .timeline-item.left {
            left: 0;
        }

        .timeline-item.right {
            left: 50%;
        }

        .timeline-item::before {
            content: '';
            position: absolute;
            top: 20px;
            width: 20px;
            height: 20px;
            background-color: #fff;
            border: 4px solid #0d6efd;
            border-radius: 50%;
            z-index: 1;
        }

        .timeline-item.left::before {
            right: -12px;
        }

        .timeline-item.right::before {
            left: -12px;
        }

        .timeline-item .content {
            position: relative;
            border-left: 5px solid #0d6efd;
        }

        .timeline-item.right .content {
            border-left: none;
            border-right: 5px solid #0d6efd;
        }
    @@media screen and (max-width: 768px) {
        .timeline::after

    {
        left: 31px;
    }

    .timeline-item {
        width: 100%;
        left: 0;
        padding-left: 70px;
    }

        .timeline-item.right .content {
            border-right: none;
            border-left: 5px solid #0d6efd;
        }

        .timeline-item::before {
            left: 15px;
        }

    }

    /* Thành tựu */
    .achievement-box {
        transition: transform 0.3s ease, box-shadow 0.3s ease;
    }

        .achievement-box:hover {
            transform: translateY(-6px);
            box-shadow: 0 8px 20px rgba(0,0,0,0.1);
        }
    /* Cam kết & Lộ trình học */
    .commitment h5 {
        font-weight: 600;
        color: #0d6efd;
    }

    .commitment p {
        color: #555;
    }

    .commitment img {
        transition: transform 0.4s ease, box-shadow 0.4s ease;
    }

        .commitment img:hover {
            transform: scale(1.03);
            box-shadow: 0 10px 25px rgba(0,0,0,0.15);
        }

</style>
