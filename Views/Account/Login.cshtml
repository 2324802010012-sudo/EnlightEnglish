@{
    ViewData["Title"] = "Đăng nhập - Enlight English Center";
    Layout = null;
}

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"]</title>

    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />

    <style>
        body {
            background: #f5f7fa;
            display: flex;
            align-items: center;
            justify-content: center;
            min-height: 100vh;
            margin: 0;
            font-family: 'Segoe UI', sans-serif;
        }

        .login-wrapper {
            display: flex;
            width: 900px;
            max-width: 100%;
            background: #fff;
            border-radius: 20px;
            box-shadow: 0 8px 30px rgba(0, 0, 0, 0.12);
            overflow: hidden;
        }

        .login-image {
            flex: 1;
            background: url('/WebTTImages/dk.jpg') no-repeat center;
            background-size: cover;
            position: relative;
        }

            .login-image::after {
                content: "";
                position: absolute;
                top: 0;
                left: 0;
                right: 0;
                bottom: 0;
                background: rgba(255, 255, 255, 0.3);
            }

        .login-form {
            flex: 1;
            padding: 60px 50px;
            display: flex;
            flex-direction: column;
            justify-content: center;
        }

            .login-form h3 {
                font-weight: 700;
                color: #0d6efd;
                margin-bottom: 30px;
            }

        .form-control {
            border-radius: 10px;
            padding: 12px;
            margin-bottom: 20px;
            border: 1px solid #cfd8dc;
            box-shadow: none;
            transition: 0.3s;
        }

            .form-control:focus {
                border-color: #0d6efd;
                box-shadow: 0 0 6px rgba(13, 110, 253, 0.25);
            }

        .btn-primary {
            background: #ff5a5a;
            border: none;
            border-radius: 10px;
            font-weight: 600;
            transition: background 0.3s ease;
        }

            .btn-primary:hover {
                background: #ff3c3c;
            }

        .login-footer {
            margin-top: 15px;
            text-align: center;
        }

            .login-footer a {
                color: #0d6efd;
                text-decoration: none;
                font-weight: 500;
            }

                .login-footer a:hover {
                    text-decoration: underline;
                }

        @@media (max-width: 768px) {
            .login-wrapper {
                flex-direction: column;
                width: 95%;
            }

            .login-image {
                height: 200px;
            }

            .login-form {
                padding: 30px;
            }
        }
    </style>
</head>

<body>
    <div class="login-wrapper">
        <!-- Ảnh bên trái -->
        <div class="login-image"></div>

        <!-- Form bên phải -->
        <div class="login-form">
            <h3><i class="fa-solid fa-user-lock me-2"></i> Đăng nhập tài khoản</h3>

            @if (ViewBag.Error != null)
            {
                <div class="alert alert-danger text-center">@ViewBag.Error</div>
            }
            @if (TempData["Logout"] != null)
            {
                <div class="alert alert-info text-center">@TempData["Logout"]</div>
            }
            @if (TempData["RegisterSuccess"] != null)
            {
                <div class="alert alert-success text-center">@TempData["RegisterSuccess"]</div>
            }

            <form asp-action="Login" asp-controller="Account" method="post">
                <div class="mb-3">
                    <input type="text" name="Username" class="form-control" placeholder="Tên đăng nhập hoặc email" required />
                </div>

                <div class="mb-4">
                    <input type="password" name="Password" class="form-control" placeholder="Mật khẩu" required />
                </div>

                <button type="submit" class="btn btn-primary w-100 py-2">
                    <i class="fa-solid fa-right-to-bracket me-1"></i> Đăng nhập
                </button>

                <div class="login-footer">
                    <small>
                        Chưa có tài khoản?
                        <a href="/Account/Register">Đăng ký ngay</a>
                    </small>
                    <br />
                    <a href="/Account/ForgotPassword" class="text-decoration-none mt-2 d-inline-block">
                        🔑 Quên mật khẩu?
                    </a>
                </div>
            </form>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
