@model EnlightEnglishCenter.Models.NguoiDung
@using Microsoft.AspNetCore.Http
@inject IHttpContextAccessor HttpContextAccessor

@{
    ViewData["Title"] = "Hồ sơ cá nhân";
    Layout = "~/Views/Shared/_Layout.cshtml";

    // 🔹 Lấy vai trò từ Session (đảm bảo không null)
    var role = HttpContextAccessor.HttpContext?.Session?.GetString("VaiTro") ?? string.Empty;
    string url = "#";
    string btnColor = "btn-outline-primary";

    switch (role)
    {
        case "Kế toán":
            url = Url.Action("Index", "KeToan") ?? "#";
            btnColor = "btn-outline-success";
            break;
        case "Lễ tân":
            url = Url.Action("Index", "LeTan") ?? "#";
            btnColor = "btn-outline-warning";
            break;
        case "Học viên":
            url = Url.Action("Index", "HocVien") ?? "#";
            break;
        case "Admin":
            url = Url.Action("Index", "Admin") ?? "#";
            btnColor = "btn-outline-danger";
            break;
        default:
            url = Url.Action("Index", "Home") ?? "#";
            break;
    }
}

<div class="container mt-5">
    <div class="card shadow-lg border-0">
        <div class="card-header bg-primary text-white text-center">
            <h3><i class="fa-solid fa-user me-2"></i> HỒ SƠ CÁ NHÂN</h3>
        </div>

        <div class="card-body p-4">
            <div class="row mb-3">
                <div class="col-md-6">
                    <p><b>👤 Họ tên:</b> @(Model.HoTen ?? "Chưa cập nhật")</p>
                    <p><b>🧭 Giới tính:</b> @(Model.GioiTinh ?? "Chưa cập nhật")</p>
                    <p><b>🎂 Ngày sinh:</b> @(Model.NgaySinh?.ToString("dd/MM/yyyy") ?? "Chưa cập nhật")</p>
                </div>
                <div class="col-md-6">
                    <p><b>📧 Email:</b> @(Model.Email ?? "Chưa cập nhật")</p>
                    <p><b>📱 Số điện thoại:</b> @(Model.SoDienThoai ?? "Chưa cập nhật")</p>
                    <p><b>🏠 Địa chỉ:</b> @(Model.DiaChi ?? "Chưa cập nhật")</p>
                </div>
            </div>

            <hr />
            <h5 class="text-primary mt-4">
                <i class="fa-solid fa-id-badge me-2"></i>Thông tin tài khoản
            </h5>

            <p><b>🔑 Tên đăng nhập:</b> @(Model.TenDangNhap ?? "Không có")</p>
            <p><b>🧩 Vai trò:</b> @(Model.MaVaiTroNavigation?.TenVaiTro ?? "Không xác định")</p>
            <p><b>⚙️ Trạng thái:</b> @(Model.TrangThai ?? "Hoạt động")</p>

            <p>
                <b>🔒 Trạng thái tài khoản:</b>
                @if (Model.KhoaDenNgay != null && Model.KhoaDenNgay > DateTime.Now)
                {
                    <span class="badge bg-danger">
                        Bị khóa đến @Model.KhoaDenNgay?.ToString("HH:mm dd/MM/yyyy")
                    </span>
                }
                else
                {
                    <span class="badge bg-success">Đang hoạt động</span>
                }
            </p>

            <div class="text-center mt-4">
                <a href="@url" class="btn @btnColor me-2">
                    <i class="fa-solid fa-arrow-left me-1"></i> Quay lại trang @(role != string.Empty ? role : "chính")
                </a>
                <a href="/Account/EditProfile" class="btn btn-success me-2">
                    <i class="fa-solid fa-pen-to-square me-1"></i> Chỉnh sửa hồ sơ
                </a>
                <a href="/Account/ChangePassword" class="btn btn-warning text-white">
                    <i class="fa-solid fa-key me-1"></i> Đổi mật khẩu
                </a>
            </div>
        </div>
    </div>
</div>
