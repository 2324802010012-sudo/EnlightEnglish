@{
    ViewData["Title"] = "Quên mật khẩu";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-5" style="max-width: 500px;">
    <div class="card shadow-lg border-0">
        <div class="card-header bg-primary text-white text-center">
            <h4><i class="fa-solid fa-envelope me-2"></i>QUÊN MẬT KHẨU</h4>
        </div>

        <div class="card-body p-4">
            <!-- Thông báo lỗi -->
            @if (TempData["Error"] != null)
            {
                <div class="alert alert-danger text-center">@TempData["Error"]</div>
            }

            <!-- Thông báo thành công -->
            @if (TempData["Message"] != null)
            {
                <div class="alert alert-success text-center">@TempData["Message"]</div>
            }

            <!-- Form nhập email -->
            <form asp-action="ForgotPassword" method="post">
                <div class="mb-3">
                    <label class="form-label fw-bold">📧 Nhập email của bạn:</label>
                    <input type="email" name="Email" class="form-control" required placeholder="example@gmail.com" />
                </div>

                <button type="submit" class="btn btn-primary w-100">
                    <i class="fa-solid fa-paper-plane me-1"></i> Gửi link đặt lại mật khẩu
                </button>
            </form>

            <!-- Hiển thị link trực tiếp -->
            @if (TempData["ResetLink"] != null)
            {
                <div class="alert alert-info text-center mt-4">
                    <p>🔗 Liên kết đặt lại mật khẩu của bạn:</p>
                    <a href="@TempData["ResetLink"]" class="btn btn-outline-primary" target="_blank">
                        👉 Nhấn vào đây để đặt lại mật khẩu
                    </a>
                </div>
            }

            <div class="text-center mt-3">
                <a href="/Account/Login" class="text-decoration-none">⬅️ Quay lại đăng nhập</a>
            </div>
        </div>
    </div>
</div>
