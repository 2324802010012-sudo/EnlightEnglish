@{
    ViewData["Title"] = "Đăng ký - ENLIGHT English Center";
    Layout = null;
}

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"]</title>

    <!-- Bootstrap & FontAwesome -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />

    <style>
        body {
            background: #f5f7fa;
            display: flex;
            align-items: center;
            justify-content: center;
            min-height: 100vh;
            margin: 0;
            font-family: 'Segoe UI', sans-serif;
        }

        .register-wrapper {
            display: flex;
            width: 950px;
            max-width: 100%;
            background: #fff;
            border-radius: 20px;
            box-shadow: 0 8px 30px rgba(0, 0, 0, 0.12);
            overflow: hidden;
        }

        /* Ảnh nền bên trái */
        .register-image {
            flex: 1;
            background: url('/WebTTImages/dk1.jpg') no-repeat center;
            background-size: cover;
            position: relative;
        }

            .register-image::after {
                content: "";
                position: absolute;
                top: 0;
                left: 0;
                right: 0;
                bottom: 0;
                background: rgba(255, 255, 255, 0.3);
            }

        /* Form bên phải */
        .register-form {
            flex: 1;
            padding: 60px 50px;
            display: flex;
            flex-direction: column;
            justify-content: center;
        }

        h3 {
            font-weight: bold;
            color: #0d6efd;
            margin-bottom: 25px;
        }

        .form-control {
            border-radius: 10px;
            padding: 10px 12px;
            border: 1px solid #cfd8dc;
        }

            .form-control:focus {
                border-color: #0d6efd;
                box-shadow: 0 0 6px rgba(13, 110, 253, 0.25);
            }

        .btn-primary {
            background: #ff5a5a;
            border: none;
            border-radius: 10px;
            font-weight: 600;
            transition: background 0.3s ease;
        }

            .btn-primary:hover {
                background: #ff3c3c;
            }

        .register-footer {
            margin-top: 10px;
            text-align: center;
        }

            .register-footer a {
                color: #0d6efd;
                text-decoration: none;
                font-weight: 500;
            }

                .register-footer a:hover {
                    text-decoration: underline;
                }

        /* Responsive */
        @@media (max-width: 768px) {
            .register-wrapper

        {
            flex-direction: column;
            width: 95%;
        }

        .register-image {
            height: 220px;
        }

        .register-form {
            padding: 30px;
        }

        }
    </style>
</head>

<body>
    <div class="register-wrapper">
        <div class="register-image"></div>

        <!-- Form bên phải -->
        <div class="register-form">
            <h3><i class="fa-solid fa-user-plus me-2"></i>Đăng ký tài khoản</h3>

            <form asp-action="Register" asp-controller="Account" method="post">
                <div class="mb-3 text-start">
                    <label class="form-label fw-semibold">Họ và tên</label>
                    <input type="text" name="FullName" class="form-control" placeholder="Nhập họ và tên..." required />
                </div>

                <div class="mb-3 text-start">
                    <label class="form-label fw-semibold">Email</label>
                    <input type="email" name="Email" class="form-control" placeholder="Nhập địa chỉ email..." required />
                </div>

                <div class="mb-3 text-start">
                    <label class="form-label fw-semibold">Mật khẩu</label>
                    <input type="password" name="Password" class="form-control" placeholder="Nhập mật khẩu..." required />
                </div>

                <div class="mb-4 text-start">
                    <label class="form-label fw-semibold">Xác nhận mật khẩu</label>
                    <input type="password" name="ConfirmPassword" class="form-control" placeholder="Nhập lại mật khẩu..." required />
                </div>

                <button type="submit" class="btn btn-primary w-100 py-2">
                    <i class="fa-solid fa-user-check me-2"></i>Đăng ký
                </button>

                <div class="register-footer mt-3">
                    <small>
                        Đã có tài khoản?
                        <a href="/Account/Login">Đăng nhập ngay</a>
                    </small>
                </div>
            </form>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
