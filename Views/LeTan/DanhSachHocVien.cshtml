@model IEnumerable<EnlightEnglishCenter.Models.HocVien>
@{
    ViewData["Title"] = "Danh sách học viên";
    Layout = "~/Views/Shared/LeTanlayout.cshtml";
}

<link rel="stylesheet" href="~/css/LeTan.css" />

<div class="container py-4">
    <h3 class="fw-bold mb-4 text-primary">
        <i class="fa-solid fa-users me-2"></i> Danh sách học viên
    </h3>

    <!-- 🔍 Form tìm kiếm -->
    <form method="get" class="row mb-4 g-2">
        <div class="col-md-6">
            <input type="text" name="search" class="form-control"
                   placeholder="Tìm theo tên, email hoặc số điện thoại..."
                   value="@ViewBag.CurrentSearch" />
        </div>
        <div class="col-md-3">
            <button type="submit" class="btn btn-primary w-100">
                <i class="fa-solid fa-search me-1"></i> Tìm kiếm
            </button>
        </div>
        <div class="col-md-3">
            <a href="@Url.Action("DanhSachHocVien")" class="btn btn-secondary w-100">
                <i class="fa-solid fa-rotate-right me-1"></i> Làm mới
            </a>
        </div>
    </form>

    <!-- 📋 Bảng danh sách học viên -->
    <div class="table-responsive shadow-sm">
        <table class="table table-hover align-middle">
            <thead class="table-primary text-center">
                <tr>
                    <th>Mã HV</th>
                    <th>Họ và tên</th>
                    <th>Email</th>
                    <th>Số điện thoại</th>
                    <th>Ngày đăng ký</th>
                    <th>Trạng thái</th>
                    <th>Thao tác</th>
                </tr>
            </thead>
            <tbody>
                @if (!Model.Any())
                {
                    <tr>
                        <td colspan="7" class="text-center text-muted py-4">
                            <i class="fa fa-info-circle me-1"></i> Không tìm thấy học viên nào.
                        </td>
                    </tr>
                }
                else
                {
                    foreach (var hv in Model)
                    {
                        <tr>
                            <td class="text-center">@hv.MaHocVien</td>
                            <td>@hv.HoTen</td>
                            <td>@hv.Email</td>
                            <td>@hv.SoDienThoai</td>
                            <td class="text-center">@hv.NgayDangKy?.ToString("dd/MM/yyyy")</td>
                            <td class="text-center">
                                @if (hv.TrangThai == "Mới đăng ký")
                                {
                                    <span class="badge bg-warning text-dark">@hv.TrangThai</span>
                                }
                                else if (hv.TrangThai == "Đang học")
                                {
                                    <span class="badge bg-success">@hv.TrangThai</span>
                                }
                                else if (hv.TrangThai == "Đã nghỉ")
                                {
                                    <span class="badge bg-secondary">@hv.TrangThai</span>
                                }
                                else
                                {
                                    <span class="badge bg-info text-dark">@hv.TrangThai</span>
                                }
                            </td>
                            <td class="text-center">
                                <a asp-controller="TestDauVao"
                                   asp-action="DangKyTestHocVien"
                                   asp-route-id="@hv.MaHocVien"
                                   class="btn btn-sm btn-outline-primary">
                                    <i class="fa-solid fa-brain me-1"></i> Đăng ký Test
                                </a>
                            </td>

                        </tr>
                    }
                }
            </tbody>
        </table>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
}
