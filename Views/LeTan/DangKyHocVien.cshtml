@model IEnumerable<dynamic>
@{
    ViewData["Title"] = "Danh sách đăng ký học viên";
}

<div class="container py-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h3 class="text-danger mb-0">
            <i class="fa-solid fa-user-plus me-2"></i> Danh sách đăng ký học viên
        </h3>
        <a asp-action="Create" class="btn btn-danger">
            <i class="fa-solid fa-plus"></i> Đăng ký mới
        </a>
    </div>

    <table class="table table-bordered table-hover align-middle">
        <thead class="table-danger text-center">
            <tr>
                <th>Học viên</th>
                <th>Lớp học</th>
                <th>Ngày đăng ký</th>
                <th>Trạng thái</th>
                <th>Hành động</th>
            </tr>
        </thead>
        <tbody>
            @if (Model != null && Model.Any())
            {
                foreach (var item in Model)
                {
                    <tr>
                        <td>@item.HoTen</td>
                        <td>@item.Lop</td>
                        <td class="text-center">@((item.NgayDangKy as DateTime?)?.ToString("dd/MM/yyyy"))</td>
                        <td class="text-center">@item.TrangThai</td>
                        <td class="text-center">
                            <form asp-action="Delete" method="post" onsubmit="return confirm('Bạn có chắc muốn xóa học viên này?');">
                                <input type="hidden" name="maHocVien" value="@item.MaHocVien" />
                                <input type="hidden" name="maLop" value="@item.MaLop" />
                                <button type="submit" class="btn btn-sm btn-danger">
                                    <i class="fa-solid fa-trash"></i> Xóa
                                </button>
                            </form>
                        </td>
                    </tr>
                }
            }
            else
            {
                <tr>
                    <td colspan="5" class="text-center text-muted">Chưa có học viên đăng ký</td>
                </tr>
            }
        </tbody>
    </table>

    <a asp-action="Index" class="btn btn-secondary mt-3">
        <i class="fa-solid fa-arrow-left"></i> Quay lại
    </a>
</div>
