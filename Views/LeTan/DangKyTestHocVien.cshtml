@{
    ViewData["Title"] = "Lễ tân - Đăng ký Test đầu vào cho học viên";
    Layout = "~/Views/Shared/LeTanlayout.cshtml";
    var hocVien = ViewBag.HocVien as EnlightEnglishCenter.Models.HocVien;
}

<div class="container py-5">
    <div class="card shadow border-0">
        <div class="card-header text-white fw-bold" style="background: linear-gradient(90deg, #6a11cb 0%, #2575fc 100%);">
            <i class="fa-solid fa-brain me-2"></i> Đăng ký Test đầu vào cho học viên
        </div>

        <div class="card-body">
            <form asp-action="DangKyTestHocVien" asp-controller="TestDauVao" method="post">
                @Html.AntiForgeryToken()
                <input type="hidden" name="MaHocVien" value="@hocVien?.MaHocVien" />

                <div class="mb-3">
                    <label class="form-label fw-semibold">Họ và tên</label>
                    <input type="text" class="form-control" value="@hocVien?.HoTen" readonly />
                </div>

                <div class="mb-3">
                    <label class="form-label fw-semibold">Email</label>
                    <input type="email" class="form-control" value="@hocVien?.Email" readonly />
                </div>

                <div class="mb-3">
                    <label class="form-label fw-semibold">Chọn khóa học để Test đầu vào</label>
                    <select name="MaKhoaHoc" class="form-select" required>
                        <option value="">-- Chọn khóa học --</option>
                        @foreach (var k in ViewBag.KhoaHocList)
                        {
                            <option value="@k.MaKhoaHoc">@k.TenKhoaHoc</option>
                        }
                    </select>
                </div>

                <div class="d-flex justify-content-between">
                    <a asp-action="DanhSachHocVien" asp-controller="LeTan" class="btn btn-secondary">
                        <i class="fa-solid fa-arrow-left me-1"></i> Quay lại
                    </a>
                    <button type="submit" class="btn btn-success">
                        <i class="fa-solid fa-check me-1"></i> Xác nhận đăng ký
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>
