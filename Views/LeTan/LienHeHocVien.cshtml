@model IEnumerable<EnlightEnglishCenter.Models.DangKyTuVan>
@{
    ViewData["Title"] = "Liên hệ học viên";
}

<div class="container py-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h3 class="text-warning mb-0">
            <i class="fa-solid fa-phone-volume me-2"></i> Liên hệ học viên
        </h3>
        <a asp-action="Index" class="btn btn-secondary">
            <i class="fa-solid fa-arrow-left"></i> Quay lại
        </a>
    </div>

    <table class="table table-bordered table-hover align-middle">
        <thead class="table-warning text-center">
            <tr>
                <th>Họ tên</th>
                <th>Email</th>
                <th>Số điện thoại</th>
                <th>Trạng thái</th>
                <th>Hành động</th>
            </tr>
        </thead>
        <tbody>
            @if (Model != null && Model.Any())
            {
                foreach (var hv in Model)
                {
                    <tr>
                        <td>@hv.HoTen</td>
                        <td>@hv.Email</td>
                        <td>@hv.SoDienThoai</td>
                        <td class="text-center">@hv.TrangThai</td>
                        <td class="text-center">
                            <a href="mailto:@hv.Email" class="btn btn-sm btn-primary me-1">
                                <i class="fa-solid fa-envelope"></i> Email
                            </a>
                            <a href="tel:@hv.SoDienThoai" class="btn btn-sm btn-success">
                                <i class="fa-solid fa-phone"></i> Gọi
                            </a>
                        </td>
                    </tr>
                }
            }
            else
            {
                <tr>
                    <td colspan="5" class="text-center text-muted">
                        Chưa có học viên nào để liên hệ.
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
