@model IEnumerable<EnlightEnglishCenter.Models.DonHocPhi>

@{
    ViewData["Title"] = "Quản lý thu học phí";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-5">
    <h2 class="fw-bold text-primary text-center mb-4">
        <i class="fa-solid fa-cash-register me-2"></i> Quản lý thu học phí
    </h2>

    <!-- ✅ THÔNG BÁO -->
    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success text-center">@TempData["Success"]</div>
    }
    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger text-center">@TempData["Error"]</div>
    }
    @if (TempData["Info"] != null)
    {
        <div class="alert alert-info text-center">@TempData["Info"]</div>
    }

    <!-- ✅ BẢNG DỮ LIỆU -->
    <table class="table table-bordered table-striped align-middle text-center shadow-sm">
        <thead class="table-primary">
            <tr>
                <th>Mã đơn</th>
                <th>Học viên</th>
                <th>Lớp học</th>
                <th>Khóa học</th>
                <th>Tổng tiền</th>
                <th>Ngày tạo</th>
                <th>Trạng thái</th>
                <th>Thao tác</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.MaDon</td>
                    <td>@item.HocVien?.HoTen</td>
                    <td>@item.LopHoc?.TenLop</td>
                    <td>@item.LopHoc?.MaKhoaHocNavigation?.TenKhoaHoc</td>
                    <td>@string.Format("{0:N0} đ", item.TongTien)</td>
                    <td>@item.NgayTao.ToString("dd/MM/yyyy")</td>
                    <td>
                        @if (item.TrangThai == "Đã thanh toán")
                        {
                            <span class="badge bg-success">
                                <i class="fa-solid fa-circle-check"></i> Đã thanh toán
                            </span>
                            <br />
                            <small class="text-muted">
                                @item.NgayThanhToan?.ToString("dd/MM/yyyy")
                            </small>
                        }
                        else
                        {
                            <span class="badge bg-warning text-dark">
                                <i class="fa-solid fa-hourglass-half"></i> Chờ xác nhận
                            </span>
                        }
                    </td>
                    <td>
                        @if (item.TrangThai != "Đã thanh toán")
                        {
                            <form asp-action="XacNhanHocPhi" method="post" class="d-inline">
                                <input type="hidden" name="id" value="@item.MaDon" />
                                <button type="submit" class="btn btn-success btn-sm">
                                    <i class="fa-solid fa-check me-1"></i> Xác nhận
                                </button>
                            </form>
                        }
                        else
                        {
                            <span class="text-success">
                                <i class="fa-solid fa-check-double"></i> Đã thu
                            </span>
                        }
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
