@{
    ViewData["Title"] = "Đăng ký học viên";
}

<div class="container py-4">
    <h3 class="text-danger mb-3">
        <i class="fa-solid fa-user-plus me-2"></i> Đăng ký học viên vào lớp
    </h3>

    <form asp-action="Create" method="post">
        <!-- 🔹 Tên học viên -->
        <div class="mb-3">
            <label class="form-label fw-bold">Tên học viên</label>
            <input type="text" name="TenHocVien" class="form-control" placeholder="Nhập tên học viên" required />
            <div class="form-text text-muted">Nhập tên học viên mới hoặc tên cần thêm vào lớp.</div>
        </div>

        <!-- 🔹 Lớp học -->
        <div class="mb-3">
            <label class="form-label fw-bold">Lớp học</label>
            <select name="MaLop" class="form-select" required>
                <option value="">-- Chọn lớp học --</option>
                @foreach (var lop in ViewBag.LopList)
                {
                    <option value="@lop.MaLop">@lop.TenLop</option>
                }
            </select>
        </div>

        <!-- 🔹 Ngày đăng ký -->
        <div class="mb-3">
            <label class="form-label fw-bold">Ngày đăng ký</label>
            <input type="date" name="NgayDangKy" class="form-control" value="@DateTime.Now.ToString("yyyy-MM-dd")" required />
        </div>

        <!-- 🔹 Trạng thái học -->
        <div class="mb-3">
            <label class="form-label fw-bold">Trạng thái học</label>
            <select name="TrangThai" class="form-select" required>
                <option value="Đang học" selected>Đang học</option>
                <option value="Hoàn thành">Hoàn thành</option>
                <option value="Tạm nghỉ">Tạm nghỉ</option>
            </select>
        </div>

        <!-- 🔹 Nút lưu / quay lại -->
        <button type="submit" class="btn btn-danger">
            <i class="fa-solid fa-save me-1"></i> Lưu đăng ký
        </button>
        <a asp-action="DangKyHocVien" class="btn btn-secondary ms-2">
            <i class="fa-solid fa-arrow-left"></i> Quay lại
        </a>
    </form>
</div>
