@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"] - Lễ Tân Trung Tâm</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css">
    <link rel="stylesheet" href="~/css/letan.css" />
</head>
<body>
    <div class="sidebar-letan">
        <div class="brand"><i class="fa-solid fa-headset me-2"></i> Lễ Tân</div>
        <a href="/LeTan/Index" class="active"><i class="fa-solid fa-house"></i> Trang chủ</a>
        <a href="/LeTan/DangKyHocVien"><i class="fa-solid fa-user-plus"></i> Đăng ký học viên</a>
        <a href="/LeTan/LienHeHocVien"><i class="fa-solid fa-phone"></i> Liên hệ học viên</a>
        <a href="/LeTan/DanhSachHocVien"><i class="fa-solid fa-list"></i> Danh sách học viên</a>
        <a href="/LeTan/ThongTinLopHoc"><i class="fa-solid fa-book"></i> Lớp học</a>
        <a href="/LeTan/BaoCao"><i class="fa-solid fa-chart-line"></i> Báo cáo doanh thu</a>


        <!-- 🔹 Đăng xuất -->
        <div class="text-center my-4">
            <form asp-controller="Account" asp-action="Logout" method="post">
                @Html.AntiForgeryToken()
                <button type="submit" class="btn btn-danger px-4">
                    <i class="fa-solid fa-right-from-bracket me-1"></i> Đăng xuất
                </button>
            </form>
        </div>
    </div>

    <div class="main-content-letan">
        @RenderBody()
    </div>

    <!-- 🧩 Nên đặt các script Bootstrap ở cuối để tránh chậm -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>

    <!-- 👇 Dòng này là chìa khóa khắc phục lỗi -->
    @RenderSection("Scripts", required: false)
</body>
</html>
