@using Microsoft.AspNetCore.Mvc.Rendering
@{
    Layout = null;
    string ctrl = (ViewContext.RouteData.Values["controller"]?.ToString() ?? "").ToLower();
    string act = (ViewContext.RouteData.Values["action"]?.ToString() ?? "").ToLower();
    bool Active(string a) => act == a.ToLower();
    string A(string a) => Active(a) ? "active bg-primary text-white" : "text-body";
    string Title = (ViewData["Title"] as string) ?? "Phòng Đào Tạo";
}
<!doctype html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@Title</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
    <style>
        body {
            background: #f7f8fa;
        }

        .pdt-sidebar {
            width: 260px;
            min-height: 100vh;
            position: fixed;
            top: 0;
            left: 0;
            border-right: 1px solid #e5e7eb;
            background: #fff;
        }

        .pdt-brand {
            font-weight: 700;
            letter-spacing: .2px;
        }

        .pdt-content {
            margin-left: 260px;
            min-height: 100vh;
        }

        .pdt-nav a {
            border-radius: .6rem;
            padding: .6rem .8rem;
            display: block;
        }

        .pdt-footer {
            border-top: 1px solid #e5e7eb;
            color: #6b7280;
        }

        .breadcrumb {
            --bs-breadcrumb-divider: '›';
        }
    </style>
    @RenderSection("Styles", required: false)
</head>
<body>
    <aside class="pdt-sidebar d-flex flex-column">
        <div class="p-3 border-bottom">
            <a class="text-decoration-none pdt-brand h4 mb-0 d-block" asp-controller="PhongDaoTao" asp-action="Index">🎓 Phòng Đào Tạo</a>
            <small class="text-muted">Enlight English Center</small>
        </div>
        <nav class="p-3 pdt-nav flex-grow-1">
            <div class="text-uppercase text-muted small mb-2">Điều hướng</div>
            <a class="@A("Index")" asp-controller="PhongDaoTao" asp-action="Index">🏠 Trang chủ</a>
            <a class="@A("DuyetTest") mt-1" asp-controller="PhongDaoTao" asp-action="DuyetTest">🧪 Duyệt test đầu vào</a>
            <div class="text-uppercase text-muted small mt-3 mb-2">Giảng dạy</div>
            <a class="@A("GiaoVien")" asp-controller="PhongDaoTao" asp-action="GiaoVien">👨‍🏫 Giảng viên</a>
            <a class="@A("PhanCong") mt-1" asp-controller="PhongDaoTao" asp-action="PhanCong">🗂️ Phân công giảng dạy</a>
            <a class="@A("LichHoc") mt-1" asp-controller="PhongDaoTao" asp-action="LichHoc">📅 Lịch học</a>
            <div class="text-uppercase text-muted small mt-3 mb-2">Đào tạo</div>
            <a class="@A("KhoaHoc")" asp-controller="PhongDaoTao" asp-action="KhoaHoc">📚 Khóa học</a>
            <a class="@A("LopHoc") mt-1" asp-controller="PhongDaoTao" asp-action="LopHoc">🏫 Lớp học</a>
            <a class="@A("LichKhaiGiang") mt-1" asp-controller="PhongDaoTao" asp-action="LichKhaiGiang">🗓️ Lịch khai giảng</a>
            <div class="mt-3">
                <form asp-controller="PhongDaoTao" asp-action="DangXuat" method="post" class="d-grid">
                    @Html.AntiForgeryToken()
                    <button class="btn btn-outline-danger">Đăng xuất</button>
                </form>
            </div>
        </nav>
        <div class="p-3 pdt-footer small">© @DateTime.Now.Year Enlight English Center</div>
    </aside>

    <main class="pdt-content">
        <header class="bg-white border-bottom">
            <div class="container-fluid py-3">
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb mb-1">
                        <li class="breadcrumb-item"><a asp-controller="PhongDaoTao" asp-action="Index">Phòng Đào Tạo</a></li>
                        @RenderSection("Breadcrumb", required: false)
                    </ol>
                </nav>
                <h1 class="h4 m-0">@Title</h1>
            </div>
        </header>
        <section class="container-fluid py-3">
            <partial name="~/Views/Shared/_Alerts.cshtml" />
            @RenderBody()
        </section>
    </main>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
