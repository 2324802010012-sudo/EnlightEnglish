@{
    Layout = null;
    string ctrl = (ViewContext.RouteData.Values["controller"]?.ToString() ?? "").ToLower();
    string act = (ViewContext.RouteData.Values["action"]?.ToString() ?? "").ToLower();

    bool IsActive(string c, string? a = null)
    {
        if (!string.Equals(ctrl, c, StringComparison.OrdinalIgnoreCase)) return false;
        if (string.IsNullOrEmpty(a)) return true;
        return string.Equals(act, a, StringComparison.OrdinalIgnoreCase);
    }
}
<!doctype html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"] - Kế toán</title>

    <!-- Bootstrap & FontAwesome -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" rel="stylesheet" />

    <style>
        :root {
            --kt-primary: #0d6efd;
            --kt-accent: #22c55e;
            --kt-bg: #f6f8fb;
            --kt-sidebar: #0b1e3a;
        }

        body {
            background: var(--kt-bg);
        }

        .kt-wrapper {
            display: flex;
            min-height: 100vh;
        }

        /* Sidebar */
        .kt-sidebar {
            width: 260px;
            background: var(--kt-sidebar);
            color: #cbd5e1;
            display: flex;
            flex-direction: column;
            position: sticky;
            top: 0;
            height: 100vh;
        }

        .kt-brand {
            padding: 16px 18px;
            border-bottom: 1px solid rgba(255,255,255,.07);
            display: flex;
            align-items: center;
            gap: 10px;
        }

            .kt-brand .logo {
                width: 38px;
                height: 38px;
                background: rgba(255,255,255,.08);
                display: flex;
                align-items: center;
                justify-content: center;
                border-radius: 10px;
                color: #fff;
            }

        .kt-menu {
            padding: 12px;
        }

            .kt-menu a {
                color: #cbd5e1;
                text-decoration: none;
                display: flex;
                align-items: center;
                gap: 10px;
                padding: 10px 12px;
                border-radius: 10px;
                transition: .15s;
            }

                .kt-menu a:hover {
                    background: rgba(255,255,255,.08);
                    color: #fff;
                }

                .kt-menu a.active {
                    background: linear-gradient(90deg, #2563eb, #22c55e);
                    color: #fff;
                    box-shadow: 0 6px 16px rgba(37,99,235,.25);
                }

            .kt-menu .section {
                font-size: .76rem;
                text-transform: uppercase;
                letter-spacing: .08em;
                color: #8ea3c0;
                margin: 14px 10px 6px;
            }

        /* Topbar */
        .kt-topbar {
            background: #fff;
            border-bottom: 1px solid #eef2f7;
            padding: 10px 18px;
            display: flex;
            align-items: center;
            justify-content: space-between;
            position: sticky;
            top: 0;
            z-index: 10;
        }

        .kt-content {
            flex: 1;
            display: flex;
            flex-direction: column;
        }

        .kt-container {
            padding: 18px;
        }

        .badge-soft {
            border: 1px solid rgba(13,110,253,.2);
            color: #0d6efd;
            background: rgba(13,110,253,.06);
        }

        .kt-footer {
            padding: 14px 18px;
            color: #64748b;
            font-size: .9rem;
        }
    </style>

    @RenderSection("Styles", required: false)
</head>
<body>
    <div class="kt-wrapper">
        <!-- Sidebar -->
        <aside id="ktSidebar" class="kt-sidebar">
            <div class="kt-brand">
                <div class="logo"><i class="fa-solid fa-coins"></i></div>
                <div>
                    <div class="text-white fw-semibold">Kế toán</div>
                    <div class="small" style="color:#8ea3c0">Enlight Center</div>
                </div>
            </div>

            <nav class="kt-menu">
                <div class="section">Tổng quan</div>
                <a class="@(IsActive("ketoan","index") ? "active" : "")" href="@Url.Action("Index","KeToan")">
                    <i class="fa-solid fa-gauge"></i> Bảng điều khiển
                </a>

                <div class="section">Nghiệp vụ</div>
                <a class="@(IsActive("ketoan","hocphi") ? "active" : "")" href="@Url.Action("HocPhi","KeToan")">
                    <i class="fa-solid fa-file-invoice-dollar"></i> Quản lý học phí
                </a>
                <a class="@(IsActive("ketoan","tinhluong") ? "active" : "")" href="@Url.Action("TinhLuong","KeToan")">
                    <i class="fa-solid fa-calculator"></i> Tính lương GV
                </a>
                <a class="@(IsActive("ketoan","baocaotaichinh") ? "active" : "")" href="@Url.Action("BaoCaoTaiChinh","KeToan")">
                    <i class="fa-chart-line"></i> Báo cáo tài chính
                </a>
                <div class="mt-auto pt-3 border-top border-light-subtle" style="margin:12px;">
                    <div class="small">Phiên bản</div>
                    <span class="badge badge-soft">v1.0</span>
                </div>
            </nav>
        </aside>

        <!-- Overlay for mobile -->
        <div id="ktOverlay" class="kt-overlay"></div>

        <!-- Content -->
        <main class="kt-content w-100">
            <div class="kt-topbar">
                <div class="d-flex align-items-center gap-2">
                    <button class="btn btn-sm btn-outline-primary d-lg-none" type="button" onclick="toggleSidebar()">
                        <i class="fa-solid fa-bars"></i>
                    </button>
                    <div class="fw-semibold">@ViewData["Title"]</div>
                </div>
                <div class="d-flex align-items-center gap-2">
                    <a class="btn btn-sm btn-outline-secondary" href="@Url.Action("Index","Home")">
                        <i class="fa-solid fa-house"></i> Trang chủ
                    </a>
                    <form asp-controller="Account" asp-action="Logout" method="post" class="d-inline">
                        @Html.AntiForgeryToken()
                        <button class="btn btn-sm btn-danger"><i class="fa-solid fa-right-from-bracket"></i> Đăng xuất</button>
                    </form>
                </div>
            </div>

            <div class="kt-container">
                @RenderBody()
            </div>

            <footer class="kt-footer">
                © @DateTime.Now.Year Enlight Center · Bộ phận Kế toán
            </footer>
        </main>
    </div>

    <!-- Scripts -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        const elSidebar = document.getElementById('ktSidebar');
        const elOverlay = document.getElementById('ktOverlay');
        function toggleSidebar() {
            elSidebar.classList.toggle('show');
            elOverlay.classList.toggle('show');
        }
        elOverlay?.addEventListener('click', toggleSidebar);
    </script>
    @RenderSection("Scripts", required: false)
</body>
</html>
