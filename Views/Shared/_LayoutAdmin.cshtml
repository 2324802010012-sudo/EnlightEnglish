@{
    var userName = Context.Session.GetString("TenDangNhap");
    var userRole = Context.Session.GetString("VaiTro");
}
<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"] - Enlight Admin</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css" rel="stylesheet" />

    <style>
        <style >
        body {
            background-color: #f8f9fa;
            font-family: "Segoe UI", sans-serif;
            margin: 0;
            padding: 0;
            overflow-x: hidden;
        }

        /* SIDEBAR */
        .sidebar {
            width: 250px;
            height: 100vh;
            position: fixed;
            left: 0;
            top: 0;
            background: linear-gradient(180deg, #004aad, #007bff);
            color: white;
            padding-top: 70px; /* khoảng trống cho navbar */
            box-shadow: 2px 0 5px rgba(0,0,0,0.1);
            z-index: 1030;
            overflow-y: auto;
        }

            .sidebar a {
                color: white;
                text-decoration: none;
                display: block;
                padding: 12px 22px;
                font-weight: 500;
                transition: all 0.3s ease;
            }

                .sidebar a:hover, .sidebar a.active {
                    background: rgba(255, 255, 255, 0.15);
                    border-left: 4px solid #fff;
                    padding-left: 18px;
                }

            .sidebar h6 {
                font-size: 0.75rem;
                text-transform: uppercase;
                letter-spacing: 1px;
                color: rgba(255,255,255,0.7);
                padding: 10px 20px;
                margin-bottom: 0;
            }

        /* NAVBAR */
        .navbar {
            position: fixed;
            top: 0;
            left: 250px;
            right: 0;
            background-color: #fff;
            z-index: 1040;
            box-shadow: 0 2px 5px rgba(0,0,0,0.05);
        }

        /* NỘI DUNG */
        .content {
            margin-left: 250px; /* tránh sidebar */
            padding: 100px 30px 30px; /* thêm khoảng trống để không bị navbar che */
            min-height: calc(100vh - 80px);
        }

        /* FOOTER */
        footer {
            margin-left: 250px;
            text-align: center;
            color: #777;
            padding: 15px;
            border-top: 1px solid #e9ecef;
            background-color: #f8f9fa;
        }
    </style>

    </style>
</head>

<body>
    <nav class="navbar navbar-expand-lg bg-white fixed-top">
        <div class="container-fluid px-4">
            <span class="navbar-brand fw-bold text-primary">
                <i class="bi bi-gear-wide-connected me-2"></i> Enlight Admin Dashboard
            </span>
            <div class="ms-auto d-flex align-items-center">
                <span class="text-muted me-3">
                    <i class="bi bi-person-circle me-1"></i> @userName (@userRole)
                </span>
                <a href="/Account/Logout" class="btn btn-outline-danger btn-sm">
                    <i class="bi bi-box-arrow-right me-1"></i> Đăng xuất
                </a>
            </div>
        </div>
    </nav>

    <div class="sidebar">
        <div class="px-3 mb-3 fw-bold d-flex align-items-center ps-2">
            <i class="bi bi-lightbulb-fill me-2"></i> ENLIGHT ADMIN
        </div>

        <h6>Quản trị hệ thống</h6>
        <a href="/Admin/Index" class="@(ViewData["Title"]?.ToString() == "Trang chủ" ? "active" : "")">
            <i class="bi bi-house-door me-2"></i> Trang chủ
        </a>
        <a href="/NguoiDung/Index"><i class="bi bi-people-fill me-2"></i> Quản lý người dùng</a>
        <a href="/PhanQuyen/Index"><i class="bi bi-shield-lock-fill me-2"></i> Quản lý phân quyền</a>
        <a href="/BaoCao/BaoCaoTaiChinh">
            <i class="bi bi-bar-chart-line-fill me-2"></i> Báo cáo thống kê
        </a>

    
    </div>

    <div class="content">
        @RenderBody()
    </div>

    <footer>
        <small>© 2025 Enlight English Center — Quản trị hệ thống v1.0</small>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
