@model EnlightEnglishCenter.ViewModels.FeeDetailVm
@{
    Layout = "~/Views/Shared/KeToanLayout.cshtml";
    string Fm(decimal v) => string.Format("{0:N0} đ", v);
    bool isPaid = string.Equals(Model.TrangThai, "Đã thanh toán", StringComparison.OrdinalIgnoreCase)
                  || Model.ConNo == 0;
    bool printMode = (ViewBag.PrintMode as bool?) == true;
}

@section Styles {
    <style>
        .invoice-box {
            background: #fff;
            border: 1px solid #eef2f7;
            border-radius: 12px
        }

        .invoice-header {
            border-bottom: 1px dashed #e5e7eb
        }

        .badge-soft {
            border: 1px solid rgba(13,110,253,.2);
            color: #0d6efd;
            background: rgba(13,110,253,.06)
        }

        .table-sm td, .table-sm th {
            padding: .5rem .6rem
        }
      
        {
            display: none !important;
        }

        .invoice-box {
            border: 0
        }

        body {
            background: #fff;
        }

        }
    </style>
}

<div class="container py-4">
    <div class="d-flex justify-content-between align-items-center mb-3 no-print">
        <div class="d-flex align-items-center gap-2">
            <a class="btn btn-outline-secondary" href="@Url.Action("HocPhi","KeToan")">
                <i class="fa-solid fa-arrow-left me-1"></i> Quay lại danh sách
            </a>
        </div>
        <div class="d-flex gap-2">
            @if (!isPaid)
            {
                <form asp-action="XacNhanHocPhi" asp-controller="KeToan" method="post" class="d-inline">
                    @Html.AntiForgeryToken()
                    <input type="hidden" name="id" value="@Model.MaDon" />
                    <button class="btn btn-success"><i class="fa-solid fa-check me-1"></i> Xác nhận</button>
                </form>
            }
            else
            {
                <form asp-action="HuyXacNhanHocPhi" asp-controller="KeToan" method="post" class="d-inline"
                      onsubmit="return confirm('Hủy xác nhận và trả đơn về trạng thái chờ?');">
                    @Html.AntiForgeryToken()
                    <input type="hidden" name="id" value="@Model.MaDon" />
                    <button class="btn btn-outline-danger"><i class="fa-solid fa-rotate-left me-1"></i> Hủy xác nhận</button>
                </form>
            }
            <a class="btn btn-outline-primary" target="_blank"
               href="@Url.Action("InBienLai","KeToan", new { id = Model.MaDon })">
                <i class="fa-solid fa-print me-1"></i> In
            </a>
        </div>
    </div>

    <div class="invoice-box shadow-sm p-3 p-md-4">
        <!-- Header -->
        <div class="invoice-header pb-3 mb-3 d-flex justify-content-between">
            <div>
                <h4 class="fw-bold m-0">
                    <i class="fa-solid fa-file-invoice-dollar me-2"></i> Đơn học phí #@Model.MaDon
                </h4>
                <div class="text-muted small mt-1">
                    Ngày tạo: @Model.NgayTao:dd/MM/yyyy
                    @if (Model.NgayThanhToan.HasValue)
                    {
                        <span class="ms-2">• Ngày thanh toán: @Model.NgayThanhToan.Value:dd/MM/yyyy</span>
                    }
                </div>
            </div>
            <div class="text-end">
                @if (isPaid)
                {
                    <span class="badge bg-success">Đã thanh toán</span>
                }
                else
                {
                    <span class="badge bg-warning text-dark">Chờ xác nhận</span>
                }
                <div class="small text-muted mt-2">Nhân viên lập: @Model.NhanVienLap</div>
            </div>
        </div>

        <!-- Info -->
        <div class="row g-3">
            <div class="col-md-6">
                <div class="card border-0">
                    <div class="card-body p-0">
                        <div class="fw-semibold mb-2"><i class="fa-solid fa-user-graduate me-2"></i>Thông tin học viên</div>
                        <div class="text-muted small">
                            <div><span class="text-dark">@Model.HocVien.HoTen</span> (@Model.HocVien.MaHocVien)</div>
                            @if (!string.IsNullOrWhiteSpace(Model.HocVien.Email))
                            {
                                <div>Email: @Model.HocVien.Email</div>
                            }
                            @if (!string.IsNullOrWhiteSpace(Model.HocVien.SoDienThoai))
                            {
                                <div>Điện thoại: @Model.HocVien.SoDienThoai</div>
                            }
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-6 text-md-end">
                <div class="card border-0">
                    <div class="card-body p-0">
                        <div class="fw-semibold mb-2"><i class="fa-solid fa-chalkboard-user me-2"></i>Lớp / Khoá</div>
                        <div class="text-muted small">
                            <div>Lớp: <span class="text-dark">@Model.LopHoc.TenLop</span></div>
                            <div>Khóa học: <span class="text-dark">@Model.LopHoc.TenKhoaHoc</span></div>
                            @if (!string.IsNullOrWhiteSpace(Model.LopHoc.CaHoc))
                            {
                                <div>Ca học: <span class="text-dark">@Model.LopHoc.CaHoc</span></div>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Items -->
        <div class="card shadow-none border mt-3">
            <div class="card-body p-0">
                <div class="table-responsive">
                    <table class="table table-sm table-striped align-middle mb-0">
                        <thead class="table-light">
                            <tr>
                                <th>Nội dung</th>
                                <th class="text-center" style="width:120px">SL</th>
                                <th class="text-end" style="width:160px">Đơn giá</th>
                                <th class="text-end" style="width:180px">Thành tiền</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var it in Model.Items)
                            {
                                <tr>
                                    <td class="fw-semibold">@it.NoiDung</td>
                                    <td class="text-center">@it.SoLuong</td>
                                    <td class="text-end">@Fm(it.DonGia)</td>
                                    <td class="text-end fw-semibold">@Fm(it.ThanhTien)</td>
                                </tr>
                            }
                        </tbody>
                        <tfoot class="table-light">
                            <tr>
                                <td colspan="3" class="text-end">Tạm tính</td>
                                <td class="text-end">@Fm(Model.TienHang)</td>
                            </tr>
                            <tr>
                                <td colspan="3" class="text-end">Giảm trừ</td>
                                <td class="text-end text-danger">- @Fm(Model.GiamTru)</td>
                            </tr>
                            <tr class="fw-bold">
                                <td colspan="3" class="text-end">TỔNG CỘNG</td>
                                <td class="text-end">@Fm(Model.TongTien)</td>
                            </tr>
                        </tfoot>
                    </table>
                </div>
            </div>
        </div>

        <!-- Payments + Balance -->
        <div class="row g-3 mt-3">
            <div class="col-md-7">
                <div class="card shadow-sm">
                    <div class="card-body">
                        <div class="fw-semibold mb-2"><i class="fa-solid fa-wallet me-2"></i>Giao dịch thu</div>
                        @if (Model.Payments.Any())
                        {
                            <div class="table-responsive">
                                <table class="table table-sm mb-0">
                                    <thead><tr><th>Thời gian</th><th>Hình thức</th><th class="text-end">Số tiền</th><th>Ghi chú</th></tr></thead>
                                    <tbody>
                                        @foreach (var p in Model.Payments)
                                        {
                                            <tr>
                                                <td>@p.ThoiGian:dd/MM/yyyy HH:mm</td>
                                                <td>@p.HinhThuc</td>
                                                <td class="text-end fw-semibold">@Fm(p.SoTien)</td>
                                                <td>@p.GhiChu</td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        }
                        else
                        {
                            <div class="text-muted small">Chưa có giao dịch thu.</div>
                        }
                    </div>
                </div>
            </div>
            <div class="col-md-5">
                <div class="card shadow-sm">
                    <div class="card-body">
                        <div class="fw-semibold mb-2"><i class="fa-solid fa-scale-balanced me-2"></i>Công nợ</div>
                        <div class="d-flex justify-content-between small text-muted">
                            <span>Đã thu</span><span class="fw-semibold text-success">@Fm(Model.DaThu)</span>
                        </div>
                        <div class="d-flex justify-content-between small text-muted">
                            <span>Còn nợ</span>
                            <span class="fw-semibold @(Model.ConNo>0 ? "text-warning" : "text-success")">
                                @Fm(Model.ConNo)
                            </span>
                        </div>
                        @if (!string.IsNullOrWhiteSpace(Model.GhiChu))
                        {
                            <div class="mt-2 small"><span class="text-muted">Ghi chú:</span> @Model.GhiChu</div>
                        }
                    </div>
                </div>
            </div>
        </div>

        <!-- Footer actions -->
        <div class="mt-3 d-flex gap-2 no-print">
            <a class="btn btn-outline-primary" target="_blank"
               href="@Url.Action("InBienLai","KeToan", new { id = Model.MaDon })">
                <i class="fa-solid fa-print me-1"></i> In biên lai
            </a>
            @if (!string.IsNullOrWhiteSpace(Model.HocVien.Email))
            {
                var subject = Uri.EscapeDataString($"Biên lai học phí #{Model.MaDon} - Enlight Center");
                var body = Uri.EscapeDataString($"Chào {Model.HocVien.HoTen},\n" +
                $"Tổng tiền: {Model.TongTien:N0} đ\n" +
                $"Đã thu: {Model.DaThu:N0} đ\n" +
                $"Còn nợ: {Model.ConNo:N0} đ\n" +
                $"Trân trọng!");
                <a class="btn btn-primary" href="mailto:@Model.HocVien.Email?subject=@subject&body=@body">
                    <i class="fa-solid fa-envelope me-1"></i> Gửi email
                </a>
            }
            <button class="btn btn-secondary" onclick="window.print()">
                <i class="fa-solid fa-file-pdf me-1"></i> In/PDF
            </button>
        </div>
    </div>
</div>
