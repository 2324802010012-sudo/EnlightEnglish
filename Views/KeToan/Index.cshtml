<div class="container py-5 text-center">
    <h2 class="fw-bold text-warning">
        <i class="fa-solid fa-calculator me-2"></i> Trang kế toán
    </h2>
    <p class="text-muted">Theo dõi học phí, lương giáo viên và báo cáo tài chính.</p>

    <div class="row mt-4">
        <!-- Quản lý học phí -->
        <div class="col-md-6">
            <a href="@Url.Action("HocPhi", "KeToan")" class="text-decoration-none">
                <div class="card border-warning shadow-sm p-3 hover-shadow">
                    <i class="fa-solid fa-money-bill-wave fa-3x text-warning mb-2"></i>
                    <h5 class="text-dark">Quản lý học phí</h5>
                </div>
            </a>
        </div>

        <!-- Tính lương giáo viên -->
        <div class="col-md-6">
            <a href="@Url.Action("TinhLuong", "KeToan")" class="text-decoration-none">
                <div class="card border-success shadow-sm p-3 hover-shadow">
                    <i class="fa-solid fa-hand-holding-dollar fa-3x text-success mb-2"></i>
                    <h5 class="text-dark">Tính lương giáo viên</h5>
                </div>
            </a>
        </div>
        <div class="col-md-6">
            <a asp-action="BaoCaoTaiChinh" class="card text-decoration-none border-info shadow-sm hover-shadow">
                <div class="card-body text-center">
                    <i class="fa-solid fa-chart-line fa-2x text-info mb-3"></i>
                    <h5 class="text-info fw-bold">Báo cáo tài chính</h5>
                </div>
            </a>
        </div>

    </div>
</div>
