@model IEnumerable<dynamic>
@{
    ViewData["Title"] = "Lương giáo viên";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var filterName = ViewBag.FilterName as string ?? "";
    int? thangChon = ViewBag.FilterThang as int?;
    int? namChon = ViewBag.FilterNam as int?;
}

<div class="container mt-4">
    <h3 class="fw-bold text-success mb-4">
        <i class="fa-solid fa-money-bill-wave me-2"></i> Danh sách lương giáo viên
    </h3>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success">@TempData["Success"]</div>
    }

    <!-- 🔍 FORM LỌC -->
    <form method="get" class="row mb-3 align-items-end">
        <div class="col-md-4">
            <label class="form-label fw-semibold">Tên giáo viên</label>
            <input type="text" name="keyword" value="@filterName" class="form-control"
                   placeholder="Nhập tên giáo viên..." />
        </div>
        <div class="col-md-2">
            <label class="form-label fw-semibold">Tháng</label>
            <select name="thang" class="form-select">
                <option value="">-- Tất cả --</option>
                @foreach (var t in ViewBag.ThangList)
                {
                    <option value="@t" selected="@(thangChon == t ? "selected" : null)">@t</option>

                }
            </select>
        </div>
        <div class="col-md-2">
            <label class="form-label fw-semibold">Năm</label>
            <select name="nam" class="form-select">
                <option value="">-- Tất cả --</option>
                @foreach (var n in ViewBag.NamList)
                {
                    if (namChon == n)
                    {
                        <option value="@n" selected>@n</option>
                    }
                    else
                    {
                        <option value="@n">@n</option>
                    }
                }
            </select>
        </div>

        <div class="col-md-2">
            <button class="btn btn-primary w-100" type="submit">
                <i class="fa-solid fa-filter me-1"></i> Lọc
            </button>
        </div>
        <div class="col-md-2 text-end">
            <a asp-action="TinhLuongAll" class="btn btn-success w-100">
                <i class="fa-solid fa-calculator me-1"></i> Tính lương mới
            </a>
        </div>
    </form>

    <!-- 🧾 BẢNG DỮ LIỆU -->
    <table class="table table-hover align-middle shadow-sm">
        <thead class="table-success">
            <tr>
                <th>Giảng viên</th>
                <th>Tháng</th>
                <th>Năm</th>
                <th class="text-center">Số buổi</th>
                <th class="text-end">Lương/buổi (VNĐ)</th>
                <th class="text-end">Tổng lương (VNĐ)</th>
            </tr>
        </thead>
        <tbody>
            @if (!Model.Any())
            {
                <tr>
                    <td colspan="6" class="text-center text-muted py-3">
                        Không có dữ liệu phù hợp với bộ lọc.
                    </td>
                </tr>
            }
            else
            {
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.GiaoVien</td>
                        <td>@item.Thang</td>
                        <td>@item.Nam</td>
                        <td class="text-center">@item.SoBuoiDay</td>
                        <td class="text-end">@string.Format("{0:N0}", item.LuongMoiBuoi)</td>
                        <td class="text-end fw-bold text-success">@string.Format("{0:N0}", item.TongLuong)</td>
                    </tr>
                }
            }
        </tbody>
    </table>

    <!-- 💰 TỔNG LƯƠNG -->
    <div class="alert alert-info fw-bold mt-3">
        @if (!string.IsNullOrEmpty(filterName))
        {
            <text>
                🧑‍🏫 Tổng lương của giáo viên "<span class="text-primary">@filterName</span>":
                <span class="text-success">@string.Format("{0:N0}", ViewBag.TongLuong)</span> VNĐ
            </text>
        }
        else if (thangChon.HasValue || namChon.HasValue)
        {
            <text>
                📅 Tổng lương trung tâm cho
                @if (thangChon.HasValue) { <b>tháng @thangChon</b> }
                @if (namChon.HasValue) { <b>năm @namChon</b> }
                :
                <span class="text-success">@string.Format("{0:N0}", ViewBag.TongLuong)</span> VNĐ
            </text>
        }
        else
        {
            <text>
                💼 Tổng lương toàn trung tâm:
                <span class="text-success">@string.Format("{0:N0}", ViewBag.TongLuong)</span> VNĐ
            </text>
        }
    </div>
</div>
