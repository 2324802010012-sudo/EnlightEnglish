@model IEnumerable<dynamic>
@{
    ViewData["Title"] = "Quản lý học phí";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-4">
    <h3 class="fw-bold text-warning mb-4">
        <i class="fa-solid fa-coins me-2"></i> Danh sách học phí
    </h3>

    <!-- ✅ Hiển thị thông báo -->
    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success text-center">@TempData["Success"]</div>
    }
    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger text-center">@TempData["Error"]</div>
    }

    <table class="table table-bordered table-striped text-center align-middle shadow-sm">
        <thead class="table-warning">
            <tr>
                <th>Mã</th>
                <th>Học viên</th>
                <th>Lớp học</th>
                <th>Số tiền phải đóng</th>
                <th>Trạng thái</th>
                <th>Ngày đóng cuối</th>
                <th>Thao tác</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.MaHocPhi</td>
                    <td>@item.HocVien</td>
                    <td>@item.Lop</td>
                    <td>@string.Format("{0:N0} đ", item.SoTienPhaiDong)</td>
                    <td>
                        @if (item.TrangThai == "Đã thanh toán")
                        {
                            <span class="badge bg-success">
                                <i class="fa-solid fa-check-circle"></i> Đã thanh toán
                            </span>
                        }
                        else
                        {
                            <span class="badge bg-warning text-dark">
                                <i class="fa-solid fa-hourglass-half"></i> Chưa thanh toán
                            </span>
                        }
                    </td>
                    <td>@(item.NgayDongCuoi?.ToString("dd/MM/yyyy") ?? "-")</td>
                    <td>
                        @if (item.TrangThai != "Đã thanh toán")
                        {
                            <form asp-action="CapNhatHocPhi" method="post" class="d-inline">
                                <input type="hidden" name="id" value="@item.MaHocPhi" />
                                <button type="submit" class="btn btn-success btn-sm">
                                    <i class="fa-solid fa-check"></i> Xác nhận
                                </button>
                            </form>
                        }
                        else
                        {
                            <span class="text-success">✔ Đã thu</span>
                        }
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <a asp-action="Index" class="btn btn-secondary mt-3">
        <i class="fa-solid fa-arrow-left"></i> Quay lại
    </a>
</div>
