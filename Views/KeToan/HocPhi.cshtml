@model EnlightEnglishCenter.ViewModels.FeeListVm
@using Microsoft.AspNetCore.Mvc.Rendering
@using System.Linq

@{
    ViewData["Title"] = "Kế toán - Quản lý học phí";
    Layout = "~/Views/Shared/KeToanLayout.cshtml";

    // Dropdown trạng thái (tránh RZ1031)
    var trangThaiItems = new List<SelectListItem>
    {
        new("Tất cả trạng thái", "",               string.IsNullOrEmpty(Model?.Filter?.TrangThai)),
        new("Chờ xác nhận",     "ChoXacNhan",     Model?.Filter?.TrangThai == "ChoXacNhan"),
        new("Đã thanh toán",    "DaThanhToan",    Model?.Filter?.TrangThai == "DaThanhToan"),
    };

    // Số liệu tổng hợp
    int totalCount = Model?.Items?.Count() ?? 0;
    int paidCount = Model?.Items?.Count(d => (d?.TrangThai ?? "") == "Đã thanh toán" || d!.NgayThanhToan.HasValue) ?? 0;
    int unpaidCount = totalCount - paidCount;

    decimal totalAmount = Model?.Items?.Sum(d => d?.TongTien ?? 0) ?? 0;
    decimal paidAmount = Model?.Items?.Where(d => (d?.TrangThai ?? "") == "Đã thanh toán" || d!.NgayThanhToan.HasValue)
                                       .Sum(d => d!.TongTien) ?? 0;
    decimal unpaidAmount = totalAmount - paidAmount;

    string fmt(decimal v) => string.Format("{0:N0} đ", v);
}

@section Styles {
    <style>
        .table td, .table th {
            vertical-align: middle;
        }

        .btn-group .btn {
            white-space: nowrap;
        }
    </style>
}

<div class="container py-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h3 class="fw-bold text-primary m-0">
            <i class="fa-solid fa-file-invoice-dollar me-2"></i> Quản lý học phí
        </h3>
        <div class="d-flex gap-2">
            <a class="btn btn-primary" href="@Url.Action("TaoDonHocPhi","KeToan")">
                <i class="fa-solid fa-plus me-1"></i> Thêm đơn
            </a>
            <a class="btn btn-outline-secondary" href="@Url.Action("Index","KeToan")">
                <i class="fa-solid fa-arrow-left me-1"></i> Bảng điều khiển
            </a>
        </div>
    </div>

    <!-- Thẻ tổng hợp nhanh -->
    <div class="row g-3 mb-3">
        <div class="col-md-3">
            <div class="card shadow-sm h-100">
                <div class="card-body">
                    <div class="text-muted small">Tổng đơn</div>
                    <div class="fs-4 fw-bold">@totalCount</div>
                </div>
                <div class="card-footer bg-white small text-muted">
                    Đã thanh toán: @paidCount • Chờ: @unpaidCount
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card shadow-sm h-100">
                <div class="card-body">
                    <div class="text-muted small">Tổng tiền (đã lọc)</div>
                    <div class="fs-4 fw-bold">@fmt(totalAmount)</div>
                </div>
                <div class="card-footer bg-white small text-muted">
                    Chưa thu: @fmt(unpaidAmount)
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card shadow-sm h-100">
                <div class="card-body">
                    <div class="text-muted small">Đã thu</div>
                    <div class="fs-4 fw-bold text-success">@fmt(paidAmount)</div>
                </div>
                <div class="card-footer bg-white small text-muted">
                    @paidCount đơn đã xác nhận
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card shadow-sm h-100">
                <div class="card-body">
                    <div class="text-muted small">Chờ xác nhận</div>
                    <div class="fs-4 fw-bold text-warning">@fmt(unpaidAmount)</div>
                </div>
                <div class="card-footer bg-white small text-muted">
                    @unpaidCount đơn chưa xác nhận
                </div>
            </div>
        </div>
    </div>

    <!-- Bộ lọc -->
    <form method="get" class="row g-2 mb-3">
        <div class="col-md-3">
            <input name="Keyword" value="@Model?.Filter?.Keyword" class="form-control"
                   placeholder="Mã đơn / HV / lớp / khóa">
        </div>
        <div class="col-md-2">
            <input type="date" name="From" value="@(Model?.Filter?.From?.ToString("yyyy-MM-dd"))" class="form-control">
        </div>
        <div class="col-md-2">
            <input type="date" name="To" value="@(Model?.Filter?.To?.ToString("yyyy-MM-dd"))" class="form-control">
        </div>
        <div class="col-md-3">
            <select asp-for="Filter.TrangThai" asp-items="trangThaiItems" class="form-select"></select>
        </div>
        <div class="col-md-2 text-end">
            <div class="d-flex gap-2">
                <button class="btn btn-primary w-100">
                    <i class="fa-solid fa-magnifying-glass me-1"></i> Lọc
                </button>
                <a class="btn btn-outline-secondary" href="@Url.Action("HocPhi","KeToan")">Làm mới</a>
            </div>
        </div>
    </form>

    @if (TempData["Success"] is string ok)
    {
        <div class="alert alert-success">@ok</div>
    }
    @if (TempData["Error"] is string er)
    {
        <div class="alert alert-danger">@er</div>
    }

    <div class="card shadow-sm">
        <div class="table-responsive">
            <table class="table table-striped align-middle mb-0">
                <thead class="table-light">
                    <tr class="text-nowrap">
                        <th>Mã đơn</th>
                        <th>Học viên</th>
                        <th>Lớp</th>
                        <th>Khóa</th>
                        <th class="text-end">Tổng tiền</th>
                        <th class="text-center">Ngày tạo</th>
                        <th class="text-center">Trạng thái</th>
                        <th class="text-center">Quản lý</th>
                    </tr>
                </thead>
                <tbody>
                    @if (!(Model?.Items?.Any() ?? false))
                    {
                        <tr>
                            <td colspan="8" class="text-center text-muted py-4">Không có dữ liệu.</td>
                        </tr>
                    }
                    else
                    {
                        foreach (var d in Model!.Items!)
                        {
                            bool paid = d.NgayThanhToan.HasValue || string.Equals(d.TrangThai, "Đã thanh toán", StringComparison.OrdinalIgnoreCase);
                            var email = d.HocVien?.Email ?? "";
                            var hoTen = d.HocVien?.HoTen ?? "Học viên";
                            var subject = Uri.EscapeDataString("Nhắc học phí - Trung tâm Anh ngữ");
                            var body = Uri.EscapeDataString($"Chào {hoTen},\n" +
                            (paid ? $"Trung tâm xác nhận đã nhận học phí {d.TongTien:N0} đ cho lớp {d.LopHoc?.TenLop}.\n"
                            : $"Vui lòng hoàn tất học phí {d.TongTien:N0} đ cho lớp {d.LopHoc?.TenLop}.\n") +
                            "Xin cảm ơn!");

                            <tr>
                                <td class="fw-semibold">@d.MaDon</td>
                                <td>
                                    <div class="fw-semibold">@hoTen</div>
                                    <div class="small text-muted">@email</div>
                                </td>
                                <td>@d.LopHoc?.TenLop</td>
                                <td>@d.LopHoc?.MaKhoaHocNavigation?.TenKhoaHoc</td>
                                <td class="text-end fw-semibold">@string.Format("{0:N0} đ", d.TongTien)</td>
                                <td class="text-center">@d.NgayTao.ToString("dd/MM/yyyy")</td>
                                <td class="text-center">
                                    @if (paid)
                                    {
                                        <span class="badge bg-success">Đã thanh toán</span>
                                        if (d.NgayThanhToan.HasValue)
                                        {
                                            <div class="small text-muted">@d.NgayThanhToan.Value.ToString("dd/MM/yyyy")</div>
                                        }
                                    }
                                    else
                                    {
                                        <span class="badge bg-warning text-dark">Chờ xác nhận</span>
                                    }
                                </td>
                                <td class="text-center">
                                    <div class="btn-group">
                                        @if (!paid)
                                        {
                                            <!-- Xác nhận -->
                                            <form asp-action="XacNhanHocPhi" asp-controller="KeToan" method="post" class="d-inline">
                                                @Html.AntiForgeryToken()
                                                <input type="hidden" name="id" value="@d.MaDon" />
                                                <button class="btn btn-sm btn-success"><i class="fa-solid fa-check me-1"></i> Xác nhận</button>
                                            </form>
                                        }
                                        else
                                        {
                                            <!-- Hủy xác nhận -->
                                            <form asp-action="HuyXacNhanHocPhi" asp-controller="KeToan" method="post" class="d-inline"
                                                  onsubmit="return confirm('Hủy xác nhận và trả đơn về trạng thái chờ?');">
                                                @Html.AntiForgeryToken()
                                                <input type="hidden" name="id" value="@d.MaDon" />
                                                <button class="btn btn-sm btn-outline-danger"><i class="fa-solid fa-rotate-left me-1"></i> Hủy</button>
                                            </form>
                                        }

                                        <!-- Xem chi tiết -->
                                        <a class="btn btn-sm btn-outline-secondary"
                                           href="@Url.Action("ChiTietDonHocPhi","KeToan", new { id = d.MaDon })">
                                            <i class="fa-regular fa-eye me-1"></i> Xem
                                        </a>

                                     <!-- In biên lai (mở tab mới – bạn tạo action InBienLai nếu muốn) --> <a class="btn btn-sm btn-outline-primary" target="_blank" href="@Url.Action("InBienLai","KeToan", new { id = d.MaDon })"> <i class="fa-solid fa-print me-1"></i> In </a> 

                                        <!-- Xóa (chỉ cho phép khi chưa thanh toán) -->
                                        @if (!paid)
                                        {
                                            <form asp-action="XoaDonHocPhi" asp-controller="KeToan" method="post" class="d-inline"
                                                  onsubmit="return confirm('Xóa đơn này? Hành động không thể hoàn tác.');">
                                                @Html.AntiForgeryToken()
                                                <input type="hidden" name="id" value="@d.MaDon" />
                                                <button class="btn btn-sm btn-outline-danger">
                                                    <i class="fa-solid fa-trash me-1"></i> Xóa
                                                </button>
                                            </form>
                                        }

                                        <!-- Email nhắc phí -->
                                        @if (!string.IsNullOrWhiteSpace(email))
                                        {
                                            <a class="btn btn-sm btn-primary"
                                               href="mailto:@email?subject=@subject&body=@body">
                                                <i class="fa-solid fa-envelope me-1"></i> Email
                                            </a>
                                        }
                                    </div>
                                </td>
                            </tr>
                        }
                    }
                </tbody>

                <!-- Tổng tiền chân bảng -->
                <tfoot class="table-light">
                    <tr class="fw-semibold">
                        <td colspan="4" class="text-end">TỔNG TIỀN:</td>
                        <td class="text-end">@fmt(totalAmount)</td>
                        <td class="text-center" colspan="3">
                            <span class="me-3 text-success">Đã thu: @fmt(paidAmount)</span>
                            <span class="text-warning">Chưa thu: @fmt(unpaidAmount)</span>
                        </td>
                    </tr>
                </tfoot>
            </table>
        </div>
    </div>
</div>
