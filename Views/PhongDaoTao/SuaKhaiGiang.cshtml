@model EnlightEnglishCenter.Models.KhoaHoc
@{
    ViewData["Title"] = "Sửa lịch khai giảng";
}

<script>
    function tinhNgayKetThuc() {
        var batdau = document.getElementById("NgayBatDau").value;
        var tuan = parseInt(document.getElementById("ThoiLuongTuan").value || "0");
        if (!batdau || tuan <= 0) return;
        var d = new Date(batdau);
        d.setDate(d.getDate() + tuan * 7);
        document.getElementById("NgayKetThuc").value = d.toISOString().split('T')[0];
    }
</script>

<div class="container mt-4">
    <h3 class="fw-bold mb-3">Sửa lịch khai giảng</h3>

    <form asp-action="SuaKhaiGiang" method="post">
        @Html.AntiForgeryToken()
        <input type="hidden" asp-for="MaKhoaHoc" />

        <div class="mb-3">
            <label class="form-label">Tên khóa học</label>
            <input asp-for="TenKhoaHoc" class="form-control" />
        </div>

        <div class="row">
            <div class="col-md-4 mb-3">
                <label class="form-label">Cấp độ</label>
                <input asp-for="CapDo" class="form-control" />
            </div>
            <div class="col-md-4 mb-3">
                <label class="form-label">Học phí (VNĐ)</label>
                <input asp-for="HocPhi" class="form-control" />
            </div>
            <div class="col-md-4 mb-3">
                <label class="form-label">Thời lượng (tuần)</label>
                <input asp-for="ThoiLuongTuan" id="ThoiLuongTuan" class="form-control" oninput="tinhNgayKetThuc()" />
            </div>
        </div>

        <div class="row">
            <div class="col-md-6 mb-3">
                <label class="form-label">Ngày bắt đầu</label>
                <input asp-for="NgayBatDau" type="date" id="NgayBatDau" class="form-control" onchange="tinhNgayKetThuc()" />
            </div>
            <div class="col-md-6 mb-3">
                <label class="form-label">Ngày kết thúc</label>
                <input asp-for="NgayKetThuc" type="date" id="NgayKetThuc" class="form-control" readonly />
            </div>
        </div>

        <div class="mb-3">
            <label class="form-label">Trạng thái</label>
            <select asp-for="TrangThai" class="form-select">
                <option>Đang mở</option>
                <option>Đã đóng</option>
            </select>
        </div>

        <div class="mb-3">
            <label class="form-label">Mô tả</label>
            <textarea asp-for="MoTa" class="form-control" rows="3"></textarea>
        </div>

        <button class="btn btn-primary">Lưu</button>
        <a asp-action="LichKhaiGiang" class="btn btn-secondary">Hủy</a>
    </form>
</div>
