@model IEnumerable<EnlightEnglishCenter.Models.LichHoc>
@{
    ViewData["Title"] = "Lịch học";
}
@section Breadcrumb {
    <li class="breadcrumb-item active" aria-current="page">Lịch học</li>
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h3 class="m-0">Danh sách lịch học</h3>
    <a asp-action="ThemLichHoc" class="btn btn-primary">
        <i class="fa fa-plus me-1"></i> Thêm lịch học
    </a>

</div>

<table class="table table-bordered align-middle">
    <thead>
        <tr>
            <th>#</th>
            <th>Lớp</th>
            <th>Khóa học</th>
            <th>Ngày</th>
            <th>Giờ</th>
            <th>Phòng</th>
            <th style="width:160px;">Thao tác</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var lh in Model)
        {
            <tr>
                <td>@lh.MaLich</td> <!-- ✅ -->
                <td>@(lh.LopHoc?.TenLop ?? "—")</td>
                <td>@(lh.LopHoc?.MaKhoaHocNavigation?.TenKhoaHoc ?? "—")</td>
                <td>@(lh.NgayHoc?.ToString("dd/MM/yyyy"))</td>
                <td>@($"{lh.GioBatDau} - {lh.GioKetThuc}")</td>
                <td>@(lh.PhongHoc ?? "—")</td>
                <td>
                    <a asp-action="SuaLichHoc" asp-route-id="@lh.MaLich" class="btn btn-sm btn-primary">Sửa</a> <!-- ✅ -->
                    <form asp-action="XoaLichHoc" method="post" class="d-inline" onsubmit="return confirm('Xóa buổi học này?')">
                        <input type="hidden" name="id" value="@lh.MaLich" /> <!-- ✅ -->
                        <button class="btn btn-sm btn-outline-danger">Xóa</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
