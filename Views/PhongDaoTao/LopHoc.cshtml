@model IEnumerable<EnlightEnglishCenter.Models.LopHoc>

@{
    ViewData["Title"] = "Quản lý lớp học";
}

<div class="container mt-4">
    <h3 class="fw-bold mb-3">Danh sách lớp học</h3>

    <a asp-action="ThemLopHoc" class="btn btn-success mb-3">
        <i class="fa fa-plus"></i> Thêm lớp học
    </a>

    <table class="table table-bordered text-center align-middle shadow-sm">
        <thead class="table-light">
            <tr>
                <th>#</th>
                <th>Tên lớp</th>
                <th>Khóa học</th>
                <th>Ngày khai giảng</th>
                <th>Sĩ số tối đa</th>
                <th>Thao tác</th>
            </tr>
        </thead>
        <tbody>
            @if (Model != null && Model.Any())
            {
                int stt = 1;
                foreach (var l in Model)
                {
                    <tr>
                        <td>@stt++</td>
                        <td>@l.TenLop</td>
                        <td>@l.MaKhoaHocNavigation?.TenKhoaHoc</td>
                        <td>@l.MaKhoaHocNavigation?.NgayBatDau?.ToString("dd/MM/yyyy")</td>
                        <td>@l.SiSoToiDa</td>
                        <td>
                            <a class="btn btn-primary btn-sm" asp-action="SuaLopHoc" asp-route-id="@l.MaLop">Sửa</a>
                            <form asp-action="XoaLopHoc" asp-route-id="@l.MaLop" method="post" class="d-inline">
                                <button class="btn btn-danger btn-sm">Xóa</button>
                            </form>
                        </td>
                    </tr>
                }
            }
            else
            {
                <tr><td colspan="6">Chưa có lớp học nào</td></tr>
            }
        </tbody>
    </table>
</div>
