@model IEnumerable<EnlightEnglishCenter.Models.LopHoc>
@{
    ViewData["Title"] = "Lớp học";
}
@section Breadcrumb {
    <li class="breadcrumb-item active" aria-current="page">Lớp học</li>
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h3 class="m-0">Danh sách lớp học</h3>
    <a asp-action="ThemLopHoc" class="btn btn-success">+ Thêm lớp học</a>
</div>

<table class="table table-striped align-middle">
    <thead>
        <tr>
            <th>#</th>
            <th>Tên lớp</th>
            <th>Khóa học</th>
            <th>Thời gian</th>
            <th>Trạng thái</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var l in Model)
        {
            var kh = l.MaKhoaHocNavigation;
            <tr>
                <td>@l.MaLop</td>
                <td>@(l.TenLop ?? "—")</td>
                <td>@(kh?.TenKhoaHoc ?? "—")</td>
                <td>
                    @($"{kh?.NgayBatDau:dd/MM/yyyy} - {kh?.NgayKetThuc:dd/MM/yyyy}")
                </td>
                <td>@(l.TrangThai ?? "—")</td>
            </tr>
        }
    </tbody>
</table>
