@model IEnumerable<EnlightEnglishCenter.Models.LopHoc>
@{
    ViewData["Title"] = "Quản lý lớp học";
}

<div class="container mt-4">

    <div class="d-flex justify-content-between align-items-center mb-3">
        <h3 class="fw-bold text-primary">📚 Quản lý lớp học</h3>
        <button class="btn btn-success" data-bs-toggle="collapse" data-bs-target="#formThemLop">
            + Thêm lớp học
        </button>
    </div>

    <!-- ✅ FORM TẠO LỚP HỌC -->
    <div id="formThemLop" class="collapse mb-4">
        <div class="card p-3 shadow-sm bg-light">
            <form asp-action="ThemLopHoc" method="post">
                <div class="row">

                    <div class="col-md-3 mb-3">
                        <label class="form-label">Tên lớp</label>
                        <input name="TenLop" class="form-control" required />
                    </div>

                    <div class="col-md-3 mb-3">
                        <label class="form-label">Khóa học</label>
                        <select id="MaKhoaHoc" name="MaKhoaHoc"
                                class="form-select" asp-items="ViewBag.KhoaHocList"
                                required></select>
                    </div>

                    <div class="col-md-3 mb-3">
                        <label class="form-label">Sĩ số tối đa</label>
                        <input name="SiSoToiDa" type="number" class="form-control" required />
                    </div>

                    <!-- ✅ Dữ liệu tự động từ khóa học -->
                    <div class="col-md-3 mb-3">
                        <label>Học phí</label>
                        <input id="HocPhi" name="HocPhi" class="form-control" readonly />
                    </div>

                    <div class="col-md-3 mb-3">
                        <label>Ngày bắt đầu</label>
                        <input id="NgayBatDau" name="NgayBatDau" type="date" class="form-control" />
                    </div>

                    <div class="col-md-3 mb-3">
                        <label>Ngày kết thúc</label>
                        <input id="NgayKetThuc" name="NgayKetThuc" type="date" class="form-control" readonly />
                    </div>

                    <div class="col-md-3 mb-3">
                        <label>Thời lượng</label>
                        <input id="ThoiLuong" name="ThoiLuong" class="form-control" readonly />
                    </div>

                    <div class="col-md-3 mb-3">
                        <label>Thời lượng / tuần</label>
                        <input id="ThoiLuongTuan" name="ThoiLuongTuan" class="form-control" readonly />
                    </div>

                    <!-- 🗓️ Thứ trong tuần -->
                    <div class="col-md-3 mb-3">
                        <label class="form-label">Thứ trong tuần</label>
                        <input name="ThuTrongTuan" list="dsThu" class="form-control" placeholder="VD: 2,4,6" required />
                        <datalist id="dsThu">
                            <option value="2,4,6"></option>
                            <option value="3,5,7"></option>
                            <option value="7,CN"></option>
                        </datalist>
                    </div>

                    <!-- ⏰ Giờ học -->
                    <div class="col-md-3 mb-3">
                        <label class="form-label">Giờ học (VD: 18:00-19:30)</label>
                        <input name="LichHoc" class="form-control" placeholder="VD: 18:00-19:30" />
                    </div>
                </div>

                <button class="btn btn-primary">✅ Tạo lớp học</button>
            </form>
        </div>
    </div>

    <!-- ✅ DANH SÁCH LỚP -->
    <table class="table table-bordered table-hover text-center align-middle shadow-sm">
        <thead class="table-primary">
            <tr>
                <th>#</th>
                <th>Tên lớp</th>
                <th>Khóa học</th>
                <th>Giảng viên</th>
                <th>Ngày bắt đầu</th>
                <th>Sĩ số</th>
                <th>Thao tác</th>
            </tr>
        </thead>
        <tbody>
            @{
                int stt = 1;
            }
            @foreach (var lop in Model)
            {
                // ✅ Lấy giảng viên từ bảng phân công
                string gv = lop.PhanCongGiangDays != null && lop.PhanCongGiangDays.Any()
                ? lop.PhanCongGiangDays.FirstOrDefault()?.GiaoVien?.HoTen ?? "— Chưa phân công —"
                : "— Chưa phân công —";

                <tr>
                    <td>@stt++</td>
                    <td>@lop.TenLop</td>
                    <td>@lop.MaKhoaHocNavigation?.TenKhoaHoc</td>
                    <td>@gv</td>
                    <td>@lop.NgayBatDau?.ToString("dd/MM/yyyy")</td>
                    <td>@lop.SiSoHienTai / @lop.SiSoToiDa</td>
                    <td class="text-nowrap">
                        <a asp-action="SuaLopHoc" asp-route-id="@lop.MaLop" class="btn btn-sm btn-primary">
                            <i class="fa-solid fa-pen"></i> Sửa
                        </a>

                        <a asp-controller="LichHoc" asp-action="Index" asp-route-lopId="@lop.MaLop"
                           class="btn btn-sm btn-info">
                            <i class="fa-solid fa-calendar-days"></i> Lịch
                        </a>

                        <form asp-action="XoaLopHoc" method="post" class="d-inline">
                            <input type="hidden" name="id" value="@lop.MaLop" />
                            <button class="btn btn-sm btn-danger" onclick="return confirm('Xóa lớp @lop.TenLop?');">
                                <i class="fa-solid fa-trash"></i> Xóa
                            </button>
                        </form>

                        <!-- 🌟 Nút tạo lịch học tự động -->
                        <form asp-action="TaoLichTuDong" asp-controller="PhongDaoTao" method="post" class="d-inline">
                            <input type="hidden" name="maLop" value="@lop.MaLop" />
                            <button type="submit" class="btn btn-sm btn-success"
                                    onclick="return confirm('Tự động tạo lịch học cho lớp @lop.TenLop?');">
                                <i class="fa-solid fa-calendar-plus"></i> Tạo lịch
                            </button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <!-- ✅ THÔNG BÁO -->
    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success mt-3">@TempData["Success"]</div>
    }
    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger mt-3">@TempData["Error"]</div>
    }
    @if (TempData["Info"] != null)
    {
        <div class="alert alert-info mt-3">@TempData["Info"]</div>
    }
</div>

 <script>
    $(document).ready(function () {
        $("#MaKhoaHoc").on("change", function () {
            var id = $(this).val();
            if (!id) return;

            $.ajax({
                url: "/PhongDaoTao/LayKhoaHoc",
                type: "GET",
                data: { id: id },
                success: function (data) {
                    $("#HocPhi").val(data.hocPhi?.toLocaleString("vi-VN") || "");
                    $("#NgayBatDau").val(data.ngayBatDau || "");
                    $("#NgayKetThuc").val(data.ngayKetThuc || "");
                    $("#ThoiLuong").val(data.thoiLuong || "");
                    $("#ThoiLuongTuan").val(data.thoiLuongTuan || "");
                },
                error: function () {
                    alert("⚠️ Không thể lấy dữ liệu khóa học. Kiểm tra lại controller!");
                }
            });
        });
    });
</script>
