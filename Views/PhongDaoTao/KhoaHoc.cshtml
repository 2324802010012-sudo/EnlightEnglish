@model IEnumerable<EnlightEnglishCenter.Models.KhoaHoc>
@{
    ViewData["Title"] = "Khóa học";
}
@section Breadcrumb {
    <li class="breadcrumb-item active" aria-current="page">Khóa học</li>
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h3 class="m-0">Danh sách khóa học</h3>
    <div>
        <a asp-action="TaoKhoaHocMau" class="btn btn-outline-secondary">+ Tạo khóa học mẫu</a>
        <a asp-action="ThemKhoaHoc" class="btn btn-success">+ Thêm khóa học</a>
    </div>
</div>

<table class="table table-hover align-middle">
    <thead>
        <tr>
            <th>#</th>
            <th>Tên khóa</th>
            <th>Cấp độ</th>
            <th>Học phí</th>
            <th>Bắt đầu</th>
            <th>Kết thúc</th>
            <th>Trạng thái</th>
            <th style="width:220px;">Thao tác</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var k in Model)
        {
            <tr>
                <td>@k.MaKhoaHoc</td>
                <td>@k.TenKhoaHoc</td>
                <td>@k.CapDo</td>
                <td>@String.Format("{0:#,0}", k.HocPhi)</td>
                <td>@k.NgayBatDau?.ToString("dd/MM/yyyy")</td>
                <td>@k.NgayKetThuc?.ToString("dd/MM/yyyy")</td>
                <td><span class="badge bg-@(k.TrangThai=="Đang mở"?"success":"secondary")">@k.TrangThai</span></td>
                <td>
                    <a asp-action="SuaKhoaHoc" asp-route-id="@k.MaKhoaHoc" class="btn btn-sm btn-primary">Sửa</a>
                    <form asp-action="DoiTrangThai" method="post" class="d-inline">
                        <input type="hidden" name="id" value="@k.MaKhoaHoc" />
                        <button class="btn btn-sm btn-warning">Đóng/Mở</button>
                    </form>
                    <form asp-action="XoaKhoaHoc" method="post" class="d-inline" onsubmit="return confirm('Xóa khóa học này?')">
                        <input type="hidden" name="id" value="@k.MaKhoaHoc" />
                        <button class="btn btn-sm btn-outline-danger">Xóa</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
