@{
    ViewData["Title"] = "Phân công giảng dạy";
}

<div class="container mt-4">
    <h3 class="fw-bold mb-3">Phân công giảng viên</h3>

    <form asp-action="ThemPhanCong" method="post">
        <div class="mb-3">
            <label class="form-label fw-bold">Giảng viên</label>
            <select name="MaGiaoVien" class="form-select" required>
                <option value="">-- Chọn giảng viên --</option>
                @foreach (var gv in ViewBag.GiaoVien as SelectList)
                {
                    <option value="@gv.Value">@gv.Text</option>
                }
            </select>
        </div>

        <div class="mb-3">
            <label class="form-label fw-bold">Lớp học</label>
            <select name="MaLopHoc" class="form-select" required>
                <option value="">-- Chọn lớp học --</option>
                @foreach (var lh in ViewBag.LopHoc as SelectList)
                {
                    <option value="@lh.Value">@lh.Text</option>
                }
            </select>
        </div>

        <button type="submit" class="btn btn-primary">Lưu</button>
        <a asp-action="PhanCong" class="btn btn-secondary">Hủy</a>
    </form>
</div>
