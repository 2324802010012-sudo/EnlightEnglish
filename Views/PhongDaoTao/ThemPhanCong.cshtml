@model EnlightEnglishCenter.Models.PhanCongGiangDay

<div class="container mt-4">
    <div class="card shadow p-4">
        <h3 class="fw-bold text-primary mb-4">
            <i class="fa-solid fa-user-check me-2"></i> Phân công giảng viên
        </h3>

        <form asp-action="ThemPhanCong" method="post">
            @Html.AntiForgeryToken()

            <div class="mb-3">
                <label class="form-label fw-semibold">Giảng viên</label>
                <select asp-for="MaGiaoVien" class="form-select" asp-items="ViewBag.GiaoVien" required>
                    <option value="">-- Chọn giảng viên --</option>
                </select>
                <span asp-validation-for="MaGiaoVien" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label class="form-label fw-semibold">Lớp học</label>
                <select asp-for="MaLop" class="form-select" asp-items="ViewBag.LopHoc" required>
                    <option value="">-- Chọn lớp học --</option>
                </select>
                <span asp-validation-for="MaLop" class="text-danger"></span>
            </div>

            <div class="text-end">
                <button type="submit" class="btn btn-primary px-4">
                    <i class="fa-solid fa-save me-2"></i> Lưu
                </button>
                <a asp-action="PhanCong" class="btn btn-secondary px-4">
                    <i class="fa-solid fa-arrow-left me-2"></i> Hủy
                </a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
