@model EnlightEnglishCenter.Models.PhanCongGiangDay
@{
    ViewData["Title"] = "Thêm phân công";
}
@section Breadcrumb {
    <li class="breadcrumb-item"><a asp-action="PhanCong">Phân công giảng dạy</a></li>
    <li class="breadcrumb-item active">Thêm</li>
}

<form asp-action="ThemPhanCong" method="post" class="card p-3">
    @Html.AntiForgeryToken()
    <div class="mb-3">
        <label class="form-label">Giảng viên</label>
        <select asp-for="MaGiaoVien" class="form-select" asp-items="ViewBag.DSGiaoVien">
            <option value="">-- Chọn giảng viên --</option>
        </select>
        <span asp-validation-for="MaGiaoVien" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label class="form-label">Lớp học</label>
        <select asp-for="MaLop" class="form-select" asp-items="ViewBag.DSLopHoc">
            <option value="">-- Chọn lớp học --</option>
        </select>
        <span asp-validation-for="MaLop" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label class="form-label">Ghi chú</label>
        <input asp-for="GhiChu" class="form-control" />
    </div>
    <div>
        <button class="btn btn-primary">Lưu</button>
        <a asp-action="PhanCong" class="btn btn-outline-secondary">Hủy</a>
    </div>
</form>

@section Scripts {
<partial name="_ValidationScriptsPartial" />
 }
