@model IEnumerable<EnlightEnglishCenter.Models.GiaoVien>
@{
    ViewData["Title"] = "Giảng viên";
}
@section Breadcrumb {
    <li class="breadcrumb-item active" aria-current="page">Giảng viên</li>
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h3 class="m-0">Danh sách giảng viên</h3>
    <a asp-action="ThemGiaoVien" class="btn btn-success">+ Thêm giảng viên</a>
</div>

<table class="table table-hover align-middle">
    <thead>
        <tr>
            <th>#</th>
            <th>Họ tên</th>
            <th>Chuyên môn</th>
            <th>Trình độ</th>
            <th>Kinh nghiệm</th>
            <th style="width:160px;">Thao tác</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var gv in Model)
        {
            <tr>
                <td>@gv.MaGiaoVien</td>
                <td>@(gv.NguoiDung?.HoTen ?? "—")</td>
                <td>@(gv.ChuyenMon ?? "—")</td>
                <td>@(gv.TrinhDo ?? "—")</td>
                <td>@(gv.KinhNghiem ?? "—")</td>
                <td>
                    <a asp-action="SuaGiaoVien" asp-route-id="@gv.MaGiaoVien" class="btn btn-sm btn-primary">Sửa</a>
                    <form asp-action="XoaGiaoVien" method="post" class="d-inline" onsubmit="return confirm('Xóa giảng viên này?')">
                        <input type="hidden" name="id" value="@gv.MaGiaoVien" />
                        <button class="btn btn-sm btn-outline-danger">Xóa</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
