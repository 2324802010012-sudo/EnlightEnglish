@model IEnumerable<EnlightEnglishCenter.Models.GiaoVien>

@{
    ViewData["Title"] = "Quản lý giảng viên";
}

<div class="container py-4">
    <h2 class="fw-bold text-primary mb-4">
        <i class="fa-solid fa-chalkboard-user me-2"></i> Danh sách giảng viên
    </h2>

    <div class="text-end mb-3">
        <a asp-action="ThemGiaoVien" class="btn btn-success">
            <i class="fa-solid fa-plus me-1"></i> Thêm mới
        </a>
    </div>

    <table class="table table-bordered text-center align-middle shadow-sm">
        <thead class="table-primary">
            <tr>
                <th>Họ tên</th>
                <th>Trình độ</th>
                <th>Kinh nghiệm</th>
                <th>Chuyên môn</th>
                <th>Trạng thái</th>
                <th>Thao tác</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var gv in Model)
            {
                <tr>
                    <td>@gv.NguoiDung?.HoTen</td>
                    <td>@gv.TrinhDo</td>
                    <td>@gv.KinhNghiem</td>
                    <td>@gv.ChuyenMon</td>
                    <td>
                        <span class="badge bg-@(gv.TrangThai == "Đang giảng dạy" ? "success" : "secondary")">
                            @gv.TrangThai
                        </span>
                    </td>
                    <td>
                        <a asp-action="SuaGiaoVien" asp-route-id="@gv.MaGiaoVien" class="btn btn-outline-warning btn-sm">
                            <i class="fa-solid fa-pen"></i> Sửa
                        </a>
                        <form asp-action="XoaGiaoVien" asp-route-id="@gv.MaGiaoVien" method="post" class="d-inline">
                            <button type="submit" class="btn btn-outline-danger btn-sm"
                                    onclick="return confirm('Xóa giảng viên này?');">
                                <i class="fa-solid fa-trash"></i> Xóa
                            </button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success mt-3 text-center">@TempData["Success"]</div>
    }
</div>
