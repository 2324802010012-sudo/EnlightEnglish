@model EnlightEnglishCenter.Models.KhoaHoc
@{
    ViewData["Title"] = "Sửa khóa học";
}
@section Breadcrumb {
    <li class="breadcrumb-item"><a asp-action="KhoaHoc">Khóa học</a></li>
    <li class="breadcrumb-item active">Sửa</li>
}

<form asp-action="SuaKhoaHoc" method="post" class="card p-3">
    @Html.AntiForgeryToken()
    <input type="hidden" asp-for="MaKhoaHoc" />

    <div class="mb-3">
        <label class="form-label">Tên khóa học</label>
        <input asp-for="TenKhoaHoc" class="form-control" required />
    </div>

    <div class="row g-3">
        <div class="col-md-4">
            <label class="form-label">Cấp độ</label>
            <input asp-for="CapDo" class="form-control" />
        </div>
        <div class="col-md-4">
            <label class="form-label">Học phí</label>
            <input asp-for="HocPhi" class="form-control" />
        </div>
        <div class="col-md-4">
            <label class="form-label">Thời lượng</label>
            <input asp-for="ThoiLuong" class="form-control" />
        </div>
    </div>

    <div class="row g-3 mt-1">
        <div class="col-md-6">
            <label class="form-label">Ngày bắt đầu</label>
            <input asp-for="NgayBatDau" type="date" class="form-control" />
        </div>
        <div class="col-md-6">
            <label class="form-label">Ngày kết thúc</label>
            <input asp-for="NgayKetThuc" type="date" class="form-control" />
        </div>
    </div>

    <div class="mb-3 mt-1">
        <label class="form-label">Mô tả</label>
        <textarea asp-for="MoTa" class="form-control" rows="3"></textarea>
    </div>

    <div>
        <button class="btn btn-primary">Lưu</button>
        <a asp-action="KhoaHoc" class="btn btn-outline-secondary">Hủy</a>
    </div>
</form>

@section Scripts {
<partial name="_ValidationScriptsPartial" />
 }
