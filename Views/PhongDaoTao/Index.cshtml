@{
    ViewData["Title"] = "Trang chủ";
}
@section Breadcrumb {
    <li class="breadcrumb-item active" aria-current="page">Trang chủ</li>
}

<div class="row g-3">
    <div class="col-sm-6 col-xl-3">
        <a asp-action="GiaoVien" class="text-decoration-none">
            <div class="card h-100">
                <div class="card-body">
                    <div class="fw-bold">👨‍🏫 Giảng viên</div>
                    <div class="text-muted small">Danh sách / thêm / sửa / xóa</div>
                </div>
            </div>
        </a>
    </div>
    <div class="col-sm-6 col-xl-3">
        <a asp-action="PhanCong" class="text-decoration-none">
            <div class="card h-100">
                <div class="card-body">
                    <div class="fw-bold">🗂️ Phân công giảng dạy</div>
                    <div class="text-muted small">Gán GV vào lớp</div>
                </div>
            </div>
        </a>
    </div>
    <div class="col-sm-6 col-xl-3">
        <a asp-action="LichHoc" class="text-decoration-none">
            <div class="card h-100">
                <div class="card-body">
                    <div class="fw-bold">📅 Lịch học</div>
                    <div class="text-muted small">Quản lý buổi học</div>
                </div>
            </div>
        </a>
    </div>
    <div class="col-sm-6 col-xl-3">
        <a asp-action="KhoaHoc" class="text-decoration-none">
            <div class="card h-100">
                <div class="card-body">
                    <div class="fw-bold">📚 Khóa học</div>
                    <div class="text-muted small">Tạo/sửa/đóng-mở</div>
                </div>
            </div>
        </a>
    </div>
    <div class="col-sm-6 col-xl-3">
        <a asp-action="LopHoc" class="text-decoration-none">
            <div class="card h-100">
                <div class="card-body">
                    <div class="fw-bold">🏫 Lớp học</div>
                    <div class="text-muted small">Tạo lớp cho khóa</div>
                </div>
            </div>
        </a>
    </div>
    <div class="col-sm-6 col-xl-3">
        <a asp-action="LichKhaiGiang" class="text-decoration-none">
            <div class="card h-100">
                <div class="card-body">
                    <div class="fw-bold">🗓️ Lịch khai giảng</div>
                    <div class="text-muted small">Quản lý ngày khai giảng</div>
                </div>
            </div>
        </a>
    </div>
</div>
