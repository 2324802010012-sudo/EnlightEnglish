@model EnlightEnglishCenter.Models.KhoaHoc
@{
    ViewData["Title"] = "Thêm lịch khai giảng";
}
<form asp-action="ThemKhaiGiang" method="post" class="card p-3">
    @Html.AntiForgeryToken()

    <div class="mb-3">
        <label class="form-label">Tên khóa học</label>
        <input asp-for="TenKhoaHoc" class="form-control" required />
        <span asp-validation-for="TenKhoaHoc" class="text-danger"></span>
    </div>

    <div class="row g-3">
        <div class="col-md-6">
            <label class="form-label">Cấp độ</label>
            <input asp-for="CapDo" class="form-control" />
        </div>
        <div class="col-md-6">
            <label class="form-label">Thời lượng</label>
            <input asp-for="ThoiLuong" class="form-control" />
        </div>
    </div>

    <div class="row g-3 mt-0">
        <div class="col-md-6">
            <label class="form-label">Ngày bắt đầu (khai giảng)</label>
            <input asp-for="NgayBatDau" type="date" class="form-control" />
        </div>
        <div class="col-md-6">
            <label class="form-label">Ngày kết thúc</label>
            <input asp-for="NgayKetThuc" type="date" class="form-control" />
        </div>
    </div>

    <div class="row g-3 mt-0">
        <div class="col-md-6">
            <label class="form-label">Học phí</label>
            <input asp-for="HocPhi" type="number" step="1000" class="form-control" />
        </div>
        <div class="col-md-6">
            <label class="form-label">Trạng thái</label>
            <input asp-for="TrangThai" class="form-control" value="Đang mở" />
        </div>
    </div>

    <div class="mt-3">
        <label class="form-label">Chuẩn đầu ra</label>
        <textarea asp-for="ChuanDauRa" class="form-control" rows="3"></textarea>
    </div>

    <div class="mt-3">
        <label class="form-label">Mô tả</label>
        <textarea asp-for="MoTa" class="form-control" rows="3"></textarea>
    </div>

    <div class="mt-3">
        <button class="btn btn-primary">Lưu</button>
        <a asp-action="LichKhaiGiang" class="btn btn-outline-secondary">Hủy</a>
    </div>
</form>

@section Scripts {
<partial name="_ValidationScriptsPartial" />
 }
