@model IEnumerable<EnlightEnglishCenter.Models.PhanCongGiangDay>
@{
    ViewData["Title"] = "Phân công giảng viên";
}

<div class="container py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="fw-bold text-danger mb-0">
            <i class="fa-solid fa-people-arrows me-2"></i> Phân công giảng viên
        </h2>
        <a href="@Url.Action("ThemPhanCong", "PhongDaoTao")" class="btn btn-success">
            <i class="fa-solid fa-plus me-1"></i> Thêm phân công
        </a>
    </div>

    <table class="table table-bordered text-center align-middle shadow-sm">
        <thead class="table-danger">
            <tr>
                <th>Mã PC</th>
                <th>Giảng viên</th>
                <th>Lớp học</th>
                <th>Khóa học</th>
                <th>Ngày phân công</th>
                <th>Ghi chú</th>
                <th>Thao tác</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var pc in Model)
            {
                <tr>
                    <td>PC@pc.MaPhanCong</td>
                    <td>@pc.GiaoVien?.NguoiDung?.HoTen</td>
                    <td>@pc.LopHoc?.TenLop</td>
                    <td>@pc.LopHoc?.MaKhoaHocNavigation?.TenKhoaHoc</td>
                    <td>@(pc.NgayPhanCong.HasValue? pc.NgayPhanCong.Value.ToString("dd/MM/yyyy") : "—")</td>
                    <td>@(string.IsNullOrEmpty(pc.GhiChu) ? "—" : pc.GhiChu)</td>
                    <td>
                        <form asp-action="XoaPhanCong" asp-route-id="@pc.MaPhanCong" method="post" class="d-inline">
                            <button type="submit" class="btn btn-outline-danger btn-sm"
                                    onclick="return confirm('Bạn có chắc muốn xóa phân công này không?');">
                                <i class="fa-solid fa-trash"></i> Xóa
                            </button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success mt-3 text-center">@TempData["Success"]</div>
    }
</div>
