@model IEnumerable<EnlightEnglishCenter.Models.PhanCongGiangDay>
@{
    ViewData["Title"] = "Phân công giảng dạy";
}
@section Breadcrumb {
    <li class="breadcrumb-item active" aria-current="page">Phân công giảng dạy</li>
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h3 class="m-0">Danh sách phân công</h3>
    <a asp-action="ThemPhanCong" class="btn btn-success">+ Thêm phân công</a>
</div>

<table class="table table-striped align-middle">
    <thead>
        <tr>
            <th>#</th>
            <th>Giảng viên</th>
            <th>Lớp</th>
            <th>Khóa học</th>
            <th>Ngày phân công</th>
            <th style="width:120px;">Thao tác</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var pc in Model)
        {
            <tr>
                <td>@pc.MaPhanCong</td>
                <td>@(pc.GiaoVien?.NguoiDung?.HoTen ?? "—")</td>
                <td>@(pc.LopHoc?.TenLop ?? "—")</td>
                <td>@(pc.LopHoc?.MaKhoaHocNavigation?.TenKhoaHoc ?? "—")</td>
                <td>@pc.NgayPhanCong?.ToString("dd/MM/yyyy")</td>
                <td>
                    <form asp-action="XoaPhanCong" method="post" class="d-inline" onsubmit="return confirm('Xóa phân công này?')">
                        <input type="hidden" name="id" value="@pc.MaPhanCong" />
                        <button class="btn btn-sm btn-outline-danger">Xóa</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
