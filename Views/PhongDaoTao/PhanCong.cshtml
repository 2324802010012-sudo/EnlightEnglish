@model IEnumerable<EnlightEnglishCenter.Models.PhanCongGiangDay>

<div class="container mt-4">
    <div class="card shadow p-4">
        <h3 class="fw-bold text-primary mb-4">
            <i class="fa-solid fa-list-check me-2"></i> Danh sách phân công
        </h3>

        @if (TempData["Success"] != null)
        {
            <div class="alert alert-success alert-dismissible fade show" role="alert">
                <i class="fa-solid fa-circle-check me-2"></i> @TempData["Success"]
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        }
        else if (TempData["Error"] != null)
        {
            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                <i class="fa-solid fa-triangle-exclamation me-2"></i> @TempData["Error"]
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        }

        <div class="d-flex justify-content-between align-items-center mb-3">
            <h5 class="fw-bold">Tổng số: @Model.Count() phân công</h5>
            <a asp-action="ThemPhanCong" class="btn btn-success">
                <i class="fa-solid fa-plus me-1"></i> Thêm phân công
            </a>
        </div>

        <table class="table table-bordered align-middle text-center">
            <thead class="table-primary">
                <tr>
                    <th>#</th>
                    <th>Giảng viên</th>
                    <th>Lớp</th>
                    <th>Khóa học</th>
                    <th>Ngày phân công</th>
                    <th>Thao tác</th>
                </tr>
            </thead>
            <tbody>
                @if (Model != null && Model.Any())
                {
                    var stt = 1;
                    foreach (var item in Model)
                    {
                        <tr>
                            <td>@stt</td>
                            <td>@(item.GiaoVien?.HoTen ?? "—")</td>
                            <td>@item.LopHoc?.TenLop</td>
                            <td>@item.LopHoc?.MaKhoaHocNavigation?.TenKhoaHoc</td>
                            <td>@item.NgayPhanCong?.ToString("dd/MM/yyyy")</td>
                            <td>
                                <form asp-action="XoaPhanCong" method="post" class="d-inline">
                                    <input type="hidden" name="id" value="@item.MaPhanCong" />
                                    <button type="submit" class="btn btn-outline-danger btn-sm"
                                            onclick="return confirm('Xác nhận xóa phân công này?');">
                                        <i class="fa-solid fa-trash"></i> Xóa
                                    </button>
                                </form>
                            </td>
                        </tr>
                        stt++;
                    }
                }
                else
                {
                    <tr>
                        <td colspan="6" class="text-muted">Chưa có phân công nào.</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
