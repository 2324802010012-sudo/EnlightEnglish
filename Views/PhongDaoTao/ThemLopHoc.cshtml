@model EnlightEnglishCenter.Models.LopHoc
@{
    ViewData["Title"] = "Thêm lớp học";
}
@section Breadcrumb {
    <li class="breadcrumb-item"><a asp-action="LopHoc">Lớp học</a></li>
    <li class="breadcrumb-item active">Thêm</li>
}

<form asp-action="ThemLopHoc" method="post" class="card p-3">
    @Html.AntiForgeryToken()

    <div class="mb-3">
        <label class="form-label">Tên lớp</label>
        <input asp-for="TenLop" class="form-control" required />
        <span asp-validation-for="TenLop" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label class="form-label">Khóa học</label>
        <select asp-for="MaKhoaHoc" class="form-select" asp-items="ViewBag.DSKhoaHoc">
            <option value="">-- Chọn khóa học --</option>
        </select>
        <span asp-validation-for="MaKhoaHoc" class="text-danger"></span>
        <div class="form-text">
            Thời gian học lấy theo khóa học đã chọn (Ngày bắt đầu / kết thúc của lớp = của khóa).
        </div>
    </div>

    @* ❌ LOẠI BỎ hai input ngày vì LopHoc không có cột NgayBatDau/NgayKetThuc *@
    @* <div class="row g-3">
        <div class="col-md-6">
            <label class="form-label">Ngày bắt đầu</label>
            <input asp-for="NgayBatDau" type="date" class="form-control" />
            <span asp-validation-for="NgayBatDau" class="text-danger"></span>
        </div>
        <div class="col-md-6">
            <label class="form-label">Ngày kết thúc</label>
            <input asp-for="NgayKetThuc" type="date" class="form-control" />
            <span asp-validation-for="NgayKetThuc" class="text-danger"></span>
        </div>
    </div> *@

    <div class="mt-3">
        <label class="form-label">Trạng thái</label>
        <input asp-for="TrangThai" class="form-control" value="Đang học" />
        <span asp-validation-for="TrangThai" class="text-danger"></span>
    </div>

    <div class="mt-3">
        <button class="btn btn-primary">Lưu</button>
        <a asp-action="LopHoc" class="btn btn-outline-secondary">Hủy</a>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
