@{
    ViewData["Title"] = "Thêm lớp học";
}

<div class="container mt-4">
    <h3 class="fw-bold mb-4">Thêm lớp học</h3>

    <form asp-action="ThemLopHoc">
        <div class="mb-3">
            <label class="form-label">Tên lớp học</label>
            <input name="TenLop" class="form-control" required />
        </div>

        <div class="mb-3">
            <label class="form-label">Khóa học</label>
            <select name="MaKhoaHoc" class="form-select" required>
                <option value="">-- Chọn khóa học --</option>
                @foreach (var k in ViewBag.DSKhoaHoc as SelectList)
                {
                    <option value="@k.Value">@k.Text</option>
                }
            </select>
        </div>

        <div class="mb-3">
            <label class="form-label">Sĩ số tối đa</label>
            <input type="number" name="SiSoToiDa" class="form-control" placeholder="VD: 25" required />
        </div>

        <button type="submit" class="btn btn-primary">Lưu</button>
        <a asp-action="LopHoc" class="btn btn-secondary">Hủy</a>
    </form>
</div>
