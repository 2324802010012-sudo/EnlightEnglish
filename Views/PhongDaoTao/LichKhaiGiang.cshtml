@model IEnumerable<EnlightEnglishCenter.Models.KhoaHoc>
@{
    ViewData["Title"] = "Quản lý lịch khai giảng";
}
<div class="d-flex justify-content-between align-items-center mb-3">
    <h3 class="m-0">Lịch khai giảng</h3>
    <a asp-action="ThemKhaiGiang" class="btn btn-success">+ Thêm lịch</a>
</div>

<table class="table table-striped align-middle">
    <thead>
        <tr>
            <th>#</th>
            <th>Khóa học</th>
            <th>Cấp độ</th>
            <th>Thời lượng</th>
            <th>Khai giảng</th>
            <th>Kết thúc</th>
            <th>Học phí</th>
            <th>Trạng thái</th>
            <th style="width:160px;">Thao tác</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var k in Model)
        {
            var capDo =
            k.TenKhoaHoc?.Contains("Nâng cao", StringComparison.OrdinalIgnoreCase) == true ? "Nâng cao" :
            k.TenKhoaHoc?.Contains("Trung bình", StringComparison.OrdinalIgnoreCase) == true ? "Trung bình" :
            k.TenKhoaHoc?.Contains("Cơ bản", StringComparison.OrdinalIgnoreCase) == true ? "Cơ bản" : "—";

            <tr>
                <td>@k.MaKhoaHoc</td>
                <td>@k.TenKhoaHoc</td>
                <td>@capDo</td>
                <td>@k.ThoiLuong</td>
                <td>@k.NgayBatDau?.ToString("dd/MM/yyyy")</td>
                <td>@k.NgayKetThuc?.ToString("dd/MM/yyyy")</td>
                <td>@(k.HocPhi?.ToString("N0"))</td>
                <td>@k.TrangThai</td>
                <td>
                    <a asp-action="SuaKhaiGiang" asp-route-id="@k.MaKhoaHoc" class="btn btn-sm btn-primary">Sửa</a>
                    <form asp-action="XoaKhaiGiang" method="post" class="d-inline" onsubmit="return confirm('Xóa lịch này?')">
                        <input type="hidden" name="id" value="@k.MaKhoaHoc" />
                        <button class="btn btn-sm btn-outline-danger">Xóa</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
