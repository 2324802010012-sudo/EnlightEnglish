@model EnlightEnglishCenter.Models.GiaoVien
@{
    ViewData["Title"] = "Thêm giảng viên";
}
@section Breadcrumb {
    <li class="breadcrumb-item"><a asp-action="GiaoVien">Giảng viên</a></li>
    <li class="breadcrumb-item active">Thêm</li>
}

<form asp-action="ThemGiaoVien" method="post" class="card p-3">
    @Html.AntiForgeryToken()
    <div class="mb-3">
        <label class="form-label">Người dùng</label>
        <select asp-for="MaNguoiDung" class="form-select" asp-items="ViewBag.DSNguoiDung">
            <option value="">-- Chọn người dùng --</option>
        </select>
        <span asp-validation-for="MaNguoiDung" class="text-danger"></span>
    </div>

    <div class="row g-3">
        <div class="col-md-6">
            <label class="form-label">Chuyên môn</label>
            <input asp-for="ChuyenMon" class="form-control" />
        </div>
        <div class="col-md-6">
            <label class="form-label">Trình độ</label>
            <input asp-for="TrinhDo" class="form-control" />
        </div>
        <div class="col-12">
            <label class="form-label">Kinh nghiệm</label>
            <input asp-for="KinhNghiem" class="form-control" />
        </div>
    </div>

    <div class="mt-3">
        <button class="btn btn-primary">Lưu</button>
        <a asp-action="GiaoVien" class="btn btn-outline-secondary">Hủy</a>
    </div>
</form>

@section Scripts {
<partial name="_ValidationScriptsPartial" />
 }
