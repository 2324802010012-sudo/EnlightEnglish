@model EnlightEnglishCenter.Models.GiaoVien

@{
    ViewData["Title"] = "Thêm giảng viên";
}

<div class="container mt-5">
    <h2 class="fw-bold text-primary mb-4">
        <i class="fa-solid fa-user-plus me-2"></i> Thêm giảng viên mới
    </h2>

    <form asp-action="ThemGiaoVien" method="post" class="shadow-sm p-4 bg-light rounded">
        <div class="mb-3">
            <label class="form-label fw-bold">Người dùng</label>
            <select asp-for="MaNguoiDung" asp-items="ViewBag.DSNguoiDung" class="form-select" required>
                <option value="">-- Chọn người dùng --</option>
            </select>
        </div>

        <div class="mb-3">
            <label class="form-label fw-bold">Trình độ</label>
            <input asp-for="TrinhDo" class="form-control" placeholder="VD: Thạc sĩ Ngôn ngữ Anh" />
        </div>

        <div class="mb-3">
            <label class="form-label fw-bold">Kinh nghiệm</label>
            <input asp-for="KinhNghiem" class="form-control" placeholder="VD: 5 năm giảng dạy IELTS" />
        </div>

        <div class="mb-3">
            <label class="form-label fw-bold">Chuyên môn</label>
            <input asp-for="ChuyenMon" class="form-control" placeholder="VD: IELTS Speaking & Writing" />
        </div>

        <div class="text-center mt-4">
            <button type="submit" class="btn btn-primary px-4">
                <i class="fa-solid fa-floppy-disk me-2"></i> Lưu giảng viên
            </button>
            <a asp-action="GiaoVien" class="btn btn-outline-secondary ms-2">
                <i class="fa-solid fa-rotate-left me-2"></i> Quay lại
            </a>
        </div>
    </form>
</div>
