@model EnlightEnglishCenter.Models.LichHoc
@{
    ViewData["Title"] = "Thêm buổi học mới";
}

<div class="container mt-5 mb-5">
    <div class="text-center mb-4">
        <h2 class="fw-bold text-primary">
            <i class="fa-solid fa-calendar-plus me-2"></i>Thêm buổi học mới
        </h2>
    </div>

    <div class="card shadow-sm border-0">
        <div class="card-body">
            <form asp-action="ThemLichHoc" method="post">
                <div class="row mb-3">
                    <div class="col-md-6">
                        <label class="form-label fw-bold">Lớp học</label>
                        <select asp-for="MaLop" asp-items="ViewBag.DSLopHoc" class="form-select" required>
                            <option value="">-- Chọn lớp học --</option>
                        </select>
                    </div>
                    <div class="col-md-6">
                        <label class="form-label fw-bold">Giảng viên</label>
                        <select asp-for="MaGiaoVien" asp-items="ViewBag.DSGiaoVien" class="form-select" required>
                            <option value="">-- Chọn giảng viên --</option>
                        </select>
                    </div>
                </div>

                <div class="row mb-3">
                    <div class="col-md-6">
                        <label class="form-label fw-bold">Ngày học</label>
                        <input asp-for="NgayHoc" type="date" class="form-control" required />
                    </div>
                    <div class="col-md-6">
                        <label class="form-label fw-bold">Phòng học</label>
                        <input asp-for="PhongHoc" class="form-control" placeholder="VD: P101, Zoom-01..." />
                    </div>
                </div>

                <div class="row mb-3">
                    <div class="col-md-6">
                        <label class="form-label fw-bold">Giờ bắt đầu</label>
                        <input asp-for="GioBatDau" type="time" class="form-control" required />
                    </div>
                    <div class="col-md-6">
                        <label class="form-label fw-bold">Giờ kết thúc</label>
                        <input asp-for="GioKetThuc" type="time" class="form-control" required />
                    </div>
                </div>

                <div class="text-center mt-4">
                    <button type="submit" class="btn btn-primary px-4">
                        <i class="fa-solid fa-plus me-2"></i>Thêm buổi học
                    </button>
                    <a asp-action="LichHoc" class="btn btn-secondary ms-2">
                        <i class="fa-solid fa-rotate-left me-2"></i>Quay lại
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
