@model EnlightEnglishCenter.Models.LichHoc
@{
    ViewData["Title"] = "Thêm buổi học";
}

<div class="container mt-4">
    <h3 class="fw-bold mb-4">Thêm buổi học</h3>

    <form asp-action="ThemBuoiHoc" method="post">
        <div class="mb-3">
            <label class="form-label fw-bold">Lớp học</label>
            <select name="MaLop" class="form-select" asp-items="ViewBag.LopHoc" required>
                <option value="">-- Chọn lớp --</option>
            </select>
        </div>

        <div class="row">
            <div class="col-md-6 mb-3">
                <label class="form-label fw-bold">Ngày học</label>
                <input type="date" name="NgayHoc" class="form-control" required />
            </div>
            <div class="col-md-3 mb-3">
                <label class="form-label fw-bold">Giờ bắt đầu</label>
                <input type="time" name="GioBatDau" class="form-control" required />
            </div>
            <div class="col-md-3 mb-3">
                <label class="form-label fw-bold">Giờ kết thúc</label>
                <input type="time" name="GioKetThuc" class="form-control" required />
            </div>
        </div>

        <div class="mb-3">
            <label class="form-label fw-bold">Phòng học</label>
            <select name="PhongHoc" class="form-select" asp-items="ViewBag.PhongHoc">
                <option value="">-- Chọn phòng (tùy chọn) --</option>
            </select>
        </div>

        <div class="mb-3">
            <label class="form-label fw-bold">Nội dung</label>
            <textarea name="NoiDung" rows="2" class="form-control" placeholder="VD: Unit 1 - Listening"></textarea>
        </div>

        <button type="submit" class="btn btn-primary">Lưu</button>
        <a asp-action="LichHoc" class="btn btn-secondary">Hủy</a>
    </form>
</div>
