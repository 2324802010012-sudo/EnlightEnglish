@model EnlightEnglishCenter.Models.LichHoc

@{
    ViewData["Title"] = "Thêm lịch học";
}

<div class="container mt-4">
    <h3 class="fw-bold text-primary mb-4">
        <i class="fa-solid fa-calendar-plus me-2"></i> Thêm lịch học
    </h3>

    <form asp-action="ThemLichHoc" method="post">
        @Html.AntiForgeryToken()

        <div class="mb-3">
            <label class="form-label fw-bold">Chọn lớp học</label>
            <select asp-for="MaLop" asp-items="ViewBag.DSLopHoc" class="form-select">
                <option value="">-- Chọn lớp học --</option>
            </select>
        </div>

        <div class="row">
            <div class="col-md-4 mb-3">
                <label class="form-label fw-bold">Ngày học</label>
                <input asp-for="NgayHoc" type="date" class="form-control" required />
            </div>
            <div class="col-md-4 mb-3">
                <label class="form-label fw-bold">Giờ bắt đầu</label>
                <input asp-for="GioBatDau" type="time" class="form-control" required />
            </div>
            <div class="col-md-4 mb-3">
                <label class="form-label fw-bold">Giờ kết thúc</label>
                <input asp-for="GioKetThuc" type="time" class="form-control" required />
            </div>
        </div>

        <div class="mb-3">
            <label class="form-label fw-bold">Phòng học</label>
            <input asp-for="PhongHoc" type="text" class="form-control" placeholder="VD: P101 hoặc Online (Zoom)" />
        </div>

        <button type="submit" class="btn btn-success">
            <i class="fa-solid fa-check me-2"></i> Lưu lịch học
        </button>

        <a asp-action="LichHoc" class="btn btn-secondary ms-2">
            <i class="fa-solid fa-arrow-left me-1"></i> Quay lại
        </a>
    </form>
</div>
