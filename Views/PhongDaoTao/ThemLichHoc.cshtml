@model EnlightEnglishCenter.Models.LichHoc
@{
    ViewData["Title"] = "Thêm buổi học";
}
<form asp-action="ThemLichHoc" method="post" class="card p-3">
    @Html.AntiForgeryToken()

    <div class="mb-3">
        <label class="form-label">Lớp</label>
        <select asp-for="MaLop" class="form-select" asp-items="ViewBag.DSLopHoc">
            <option value="">-- Chọn lớp --</option>
        </select>
        <span asp-validation-for="MaLop" class="text-danger"></span>
    </div>

    <div class="row g-3">
        <div class="col-md-4">
            <label class="form-label">Ngày học</label>
            <input asp-for="NgayHoc" type="date" class="form-control" />
            <span asp-validation-for="NgayHoc" class="text-danger"></span>
        </div>
        <div class="col-md-4">
            <label class="form-label">Giờ bắt đầu</label>
            <input asp-for="GioBatDau" type="time" class="form-control" />
            <span asp-validation-for="GioBatDau" class="text-danger"></span>
        </div>
        <div class="col-md-4">
            <label class="form-label">Giờ kết thúc</label>
            <input asp-for="GioKetThuc" type="time" class="form-control" />
            <span asp-validation-for="GioKetThuc" class="text-danger"></span>
        </div>
    </div>

    <div class="mt-3">
        <label class="form-label">Nội dung</label>
        <input asp-for="NoiDung" class="form-control" />
        <span asp-validation-for="NoiDung" class="text-danger"></span>
    </div>

    <div class="mt-3">
        <label class="form-label">Phòng học</label>
        <input asp-for="PhongHoc" class="form-control" />
        <span asp-validation-for="PhongHoc" class="text-danger"></span>
    </div>

    <div class="mt-3">
        <button class="btn btn-primary">Lưu</button>
        <a asp-action="LichHoc" class="btn btn-outline-secondary">Hủy</a>
    </div>
</form>

@section Scripts {
<partial name="_ValidationScriptsPartial" />
 }
