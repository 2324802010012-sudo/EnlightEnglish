@model EnlightEnglishCenter.Models.GiaoVien

@{
    ViewData["Title"] = "Sửa thông tin giảng viên";
}

<div class="container mt-5">
    <h2 class="fw-bold text-primary mb-4">
        <i class="fa-solid fa-user-pen me-2"></i> Sửa thông tin giảng viên
    </h2>

    <form asp-action="SuaGiaoVien" method="post" class="shadow-sm p-4 bg-light rounded">
        <input type="hidden" asp-for="MaGiaoVien" />

        <div class="mb-3">
            <label class="form-label fw-bold">Họ tên</label>
            <input asp-for="NguoiDung.HoTen" class="form-control" readonly />
        </div>

        <div class="mb-3">
            <label class="form-label fw-bold">Chuyên môn</label>
            <input asp-for="ChuyenMon" class="form-control" placeholder="Nhập chuyên môn..." />
        </div>

        <div class="mb-3">
            <label class="form-label fw-bold">Trạng thái</label>
            <select asp-for="TrangThai" class="form-select">
                <option value="Đang dạy">Đang dạy</option>
                <option value="Tạm nghỉ">Tạm nghỉ</option>
                <option value="Đã nghỉ">Đã nghỉ</option>
            </select>
        </div>

        <div class="text-center mt-4">
            <button type="submit" class="btn btn-primary px-4">
                <i class="fa-solid fa-floppy-disk me-2"></i> Lưu thay đổi
            </button>
            <a asp-action="GiaoVien" asp-controller="PhongDaoTao" class="btn btn-outline-secondary ms-2">
                <i class="fa-solid fa-rotate-left me-2"></i> Quay lại
            </a>
        </div>
    </form>
</div>

<style>
    .form-label {
        color: #0d47a1;
    }

    .btn-primary {
        background: linear-gradient(45deg, #007bff, #00c6ff);
        border: none;
    }
</style>
