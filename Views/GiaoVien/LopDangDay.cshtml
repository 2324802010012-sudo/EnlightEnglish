@model IEnumerable<EnlightEnglishCenter.Models.PhanCongGiangDay>
@{
    ViewData["Title"] = "Lớp đang dạy";
}

<div class="container py-4">
    <h2 class="fw-bold text-success mb-4">
        <i class="fa-solid fa-chalkboard-teacher me-2"></i>Lớp đang giảng dạy
    </h2>

    <form class="mb-4 d-flex" method="get">
        <input type="text" name="search" value="@ViewBag.Search"
               class="form-control me-2" placeholder="🔍 Nhập tên hoặc mã lớp..." />
        <button class="btn btn-primary" type="submit">
            <i class="fa-solid fa-search me-1"></i>Tìm kiếm
        </button>
    </form>

    <table class="table table-bordered align-middle text-center shadow-sm">
        <thead class="table-success">
            <tr>
                <th>Mã lớp</th>
                <th>Tên lớp</th>
                <th>Khóa học</th>
                <th>Ngày bắt đầu</th>
                <th>Thao tác</th>
            </tr>
        </thead>
        <tbody>
            @if (Model == null || !Model.Any())
            {
                <tr>
                    <td colspan="5" class="text-muted">Chưa có lớp nào được phân công.</td>
                </tr>
            }
            else
            {
                foreach (var pc in Model)
                {
                    var lop = pc.LopHoc;
                    var khoa = lop?.MaKhoaHocNavigation;

                    <tr>
                        <td>@(lop?.MaLop)</td>
                        <td>@(lop?.TenLop ?? "—")</td>
                        <td>@(khoa?.TenKhoaHoc ?? "—")</td>
                        <td>@(khoa?.NgayBatDau?.ToString("dd/MM/yyyy") ?? "—")</td> @* ✅ đọc từ KhoaHoc *@
                        <td>
                            @if (lop != null)
                            {
                                <a href="@Url.Action("ChiTietLop", "GiaoVien", new { id = lop.MaLop })"
                                   class="btn btn-outline-success btn-sm">
                                    <i class="fa-solid fa-eye me-1"></i> Xem chi tiết
                                </a>
                            }
                            else
                            {
                                <span class="text-muted">—</span>
                            }
                        </td>
                    </tr>
                }
            }
        </tbody>
    </table>
</div>
