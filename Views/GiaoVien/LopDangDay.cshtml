@model IEnumerable<EnlightEnglishCenter.Models.PhanCongGiangDay>

@{
    ViewData["Title"] = "Lớp đang dạy";
    string search = ViewBag.Search as string ?? "";
}

<div class="container mt-4">
    <h3 class="fw-bold text-primary mb-4">
        <i class="fa fa-users me-2"></i>Danh sách lớp đang giảng dạy
    </h3>

    <!-- 🔍 Ô tìm kiếm -->
    <form method="get" class="row mb-3 g-2">
        <div class="col-md-6">
            <input type="text" name="search" class="form-control"
                   placeholder="Tìm theo tên lớp, mã lớp hoặc tên giảng viên..."
                   value="@search" />
        </div>
        <div class="col-md-3">
            <button type="submit" class="btn btn-primary w-100">
                <i class="fa fa-search me-1"></i>Tìm kiếm
            </button>
        </div>
    </form>

    <!-- 📋 Bảng dữ liệu -->
    <div class="table-responsive shadow-sm rounded">
        <table class="table table-bordered table-hover align-middle mb-0">
            <thead class="table-light text-center">
                <tr>
                    <th>#</th>
                    <th>Tên lớp</th>
                    <th>Khóa học</th>
                    <th>Giảng viên</th>
                    <th>Ngày bắt đầu</th>
                    <th>Thao tác</th>
                </tr>
            </thead>
            <tbody>
                @if (!Model.Any())
                {
                    <tr class="text-center text-muted">
                        <td colspan="6">Không có lớp nào phù hợp.</td>
                    </tr>
                }
                else
                {
                    int i = 1;
                    foreach (var item in Model)
                    {
                        <tr>
                            <td class="text-center">@i++</td>
                            <td>@item.LopHoc?.TenLop</td>
                            <td>@item.LopHoc?.MaKhoaHocNavigation?.TenKhoaHoc</td>
                            <td>@item.GiaoVien?.NguoiDung?.HoTen</td>
                            <td class="text-center">
                                @item.LopHoc?.MaKhoaHocNavigation?.NgayBatDau?.ToString("dd/MM/yyyy")
                            </td>
                            <td class="text-center">

                                @if (item.LopHoc != null && item.LopHoc.MaLop > 0)
                                {
                                    <a asp-controller="GiaoVien" asp-action="ChiTietLop"
                                       asp-route-id="@item.LopHoc.MaLop"
                                       class="btn btn-outline-primary btn-sm me-1">
                                        <i class="fa fa-eye me-1"></i>Chi tiết
                                    </a>
                                }
                                else
                                {
                                    <button class="btn btn-outline-secondary btn-sm me-1" disabled>
                                        <i class="fa fa-eye me-1"></i>Không có lớp
                                    </button>
                                }

                                <a asp-action="DanhSachHocVien"
                                   asp-route-id="@item.LopHoc?.MaLop"
                                   class="btn btn-outline-success btn-sm">
                                    <i class="fa fa-list me-1"></i>Học viên
                                </a>
                            </td>
                        </tr>
                    }
                }
            </tbody>
        </table>
    </div>
</div>
