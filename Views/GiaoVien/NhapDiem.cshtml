@model List<EnlightEnglishCenter.Models.DiemSo>
@{
    ViewData["Title"] = "Nhập điểm học viên";
}

<div class="container mt-4">
    <h3 class="fw-bold text-primary mb-3">
        <i class="fa fa-pencil-alt me-2"></i>Nhập điểm học viên
    </h3>

    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger">@TempData["Error"]</div>
    }
    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success">@TempData["Success"]</div>
    }

    <form asp-action="LuuDiem" method="post">
        @Html.AntiForgeryToken()
        <input type="hidden" name="maLop" value="@ViewBag.MaLop" />

        <table class="table table-bordered align-middle shadow-sm">
            <thead class="table-light text-center">
                <tr>
                    <th>#</th>
                    <th>Họ tên</th>
                    <th>Giữa kỳ</th>
                    <th>Cuối kỳ</th>
                    <th>Nhận xét</th>
                </tr>
            </thead>
            <tbody>
                @if (!Model.Any())
                {
                    <tr><td colspan="5" class="text-center text-muted">Không có học viên nào trong lớp này.</td></tr>
                }
                else
                {
                    int i = 0;
                    foreach (var hv in Model)
                    {
                        <tr>
                            <td class="text-center">@(++i)</td>
                            <td>@hv.HoTen</td>
                            <td>
                                <input type="number" step="0.1" name="diemList[@(i - 1)].DiemGiuaKy"
                                       value="@hv.DiemGiuaKy" class="form-control text-center" />
                            </td>
                            <td>
                                <input type="number" step="0.1" name="diemList[@(i - 1)].DiemCuoiKy"
                                       value="@hv.DiemCuoiKy" class="form-control text-center" />
                            </td>
                            <td>
                                <input type="text" name="diemList[@(i - 1)].NhanXet"
                                       value="@hv.NhanXet" class="form-control" />
                                <input type="hidden" name="diemList[@(i - 1)].MaHocVien" value="@hv.MaHocVien" />
                                <input type="hidden" name="diemList[@(i - 1)].MaDiem" value="@hv.MaDiem" />
                            </td>
                        </tr>
                    }
                }
            </tbody>
        </table>

        <div class="text-end">
            <button type="submit" class="btn btn-primary">
                <i class="fa fa-save me-1"></i> Lưu điểm
            </button>
        </div>
    </form>
</div>
