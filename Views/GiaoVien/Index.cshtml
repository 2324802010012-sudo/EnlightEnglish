@{
    ViewData["Title"] = "Giảng viên ENLIGHT";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container text-center mt-5">
    <h2 class="fw-bold text-success mb-3">
        <i class="fa-solid fa-chalkboard-user me-2"></i> Giảng viên ENLIGHT
    </h2>
    <p class="text-muted mb-4">Quản lý lớp học, điểm danh và tài liệu giảng dạy.</p>

    <div class="row justify-content-center g-4">

        <div class="col-12 col-md-4">
            <a asp-controller="GiaoVien" asp-action="LopDangDay"
               class="card shadow-sm border-0 text-decoration-none text-dark p-4 hover-card h-100">
                <i class="fa-solid fa-people-group fa-3x text-success mb-3"></i>
                <h5 class="fw-bold">Lớp đang dạy</h5>
                <div class="text-muted small">Xem các lớp bạn được phân công</div>
            </a>
        </div>

        <div class="col-12 col-md-4">
            <a asp-controller="GiaoVien" asp-action="TaiLieuGiangDay"
               class="card shadow-sm border-0 text-decoration-none text-dark p-4 hover-card h-100">
                <i class="fa-solid fa-folder-open fa-3x text-warning mb-3"></i>
                <h5 class="fw-bold">Tài liệu giảng dạy</h5>
                <div class="text-muted small">Xem & tải lên tài liệu</div>
            </a>
        </div>

        <div class="col-12 col-md-4">
            <a asp-controller="GiaoVien" asp-action="NhapDiem"
               class="card shadow-sm border-0 text-decoration-none text-dark p-4 hover-card h-100">
                <i class="fa-solid fa-pen-to-square fa-3x text-primary mb-3"></i>
                <h5 class="fw-bold">Nhập điểm học viên</h5>
                <div class="text-muted small">Chọn lớp và nhập điểm</div>
            </a>
        </div>

    </div>
</div>

<style>
    .hover-card {
        transition: transform .25s ease, background-color .25s ease;
    }

        .hover-card:hover {
            transform: translateY(-3px) scale(1.03);
            background-color: #f9f9f9;
        }
</style>
