@model EnlightEnglishCenter.Models.LopHoc
@{
    ViewData["Title"] = "Chi tiết lớp học";
}

<div class="container mt-4">
    <h3 class="fw-bold text-primary mb-3">
        <i class="fa fa-info-circle me-2"></i>Chi tiết lớp: @ViewBag.TenLop
    </h3>

    <div class="card shadow-sm mb-4">
        <div class="card-body">
            <p><strong>📘 Khóa học:</strong> @ViewBag.KhoaHoc</p>
            <p><strong>👩‍🏫 Giảng viên:</strong> @ViewBag.GiangVien</p>
            <p><strong>🏫 Phòng học:</strong> @ViewBag.PhongHoc</p>
            <p><strong>📅 Ngày bắt đầu:</strong> @ViewBag.NgayBatDau</p>
            <p><strong>🕒 Tổng số buổi:</strong> @ViewBag.TongBuoi</p>
        </div>
    </div>

    <h5 class="fw-bold mb-3">📆 Lịch học</h5>
    <table class="table table-bordered table-hover align-middle">
        <thead class="table-light text-center">
            <tr>
                <th>#</th>
                <th>Ngày</th>
                <th>Ca học</th>
                <th>Phòng học</th>
            </tr>
        </thead>
        <tbody>
            @if (Model.LichHocs == null || !Model.LichHocs.Any())
            {
                <tr class="text-center text-muted">
                    <td colspan="4">Chưa có lịch học.</td>
                </tr>
            }
            else
            {
                int i = 1;
                foreach (var lich in Model.LichHocs)
                {
                    <tr>
                        <td class="text-center">@i++</td>
                        <td>@lich.NgayHoc?.ToString("dd/MM/yyyy")</td>
                        <td>
                            @{
                                var batDau = lich.GioBatDau.HasValue ? lich.GioBatDau.Value.ToString(@"hh\:mm") : "—";
                                var ketThuc = lich.GioKetThuc.HasValue ? lich.GioKetThuc.Value.ToString(@"hh\:mm") : "—";
                            }
                            @($"{batDau} - {ketThuc}")
                        </td>


                        <td>@lich.PhongHoc</td>
                    </tr>
                }
            }
        </tbody>
    </table>

    <div class="mt-3">
        <a asp-action="LopDangDay" class="btn btn-secondary">
            <i class="fa fa-arrow-left me-1"></i>Quay lại
        </a>
    </div>
</div>
