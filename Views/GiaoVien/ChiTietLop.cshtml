@model EnlightEnglishCenter.Models.LopHoc
@{
    ViewData["Title"] = "Chi tiết lớp học";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container py-4">
    <div class="text-center mb-4">
        <h2 class="fw-bold text-primary">
            <i class="fa-solid fa-chalkboard-user me-2"></i>Chi tiết lớp @ViewBag.TenLop
        </h2>
        <p class="text-muted mb-1">Khóa học: <strong>@ViewBag.KhoaHoc</strong></p>
        <p class="text-muted mb-1">Giảng viên: <strong>@ViewBag.GiangVien</strong></p>
        <p class="text-muted mb-1">Ngày bắt đầu: <strong>@ViewBag.NgayBatDau</strong></p>
        <p class="text-muted mb-1">Tổng buổi học: <strong>@ViewBag.TongBuoi</strong></p>
        <p class="text-muted">Phòng học: <strong>@ViewBag.PhongHoc</strong></p>
    </div>

    <hr />

    <h4 class="text-success mb-3">
        <i class="fa-solid fa-calendar-days me-2"></i>Thời khóa biểu
    </h4>

    <div class="table-responsive">
        <table class="table table-bordered text-center align-middle shadow-sm">
            <thead class="table-primary">
                <tr>
                    <th>Ngày học</th>
                    <th>Giờ học</th>
                    <th>Phòng học</th>
                </tr>
            </thead>
            <tbody>
                @if (Model.LichHocs != null && Model.LichHocs.Any())
                {
                    foreach (var lich in Model.LichHocs.OrderBy(l => l.NgayHoc))
                    {
                        <tr>
                            <td>@lich.NgayHoc?.ToString("dd/MM/yyyy")</td>
                            <td>@lich.GioBatDau - @lich.GioKetThuc</td>
                            <td>@lich.PhongHoc</td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="3" class="text-muted">⏳ Chưa có lịch học nào được sắp xếp</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <div class="text-end mt-3">
        <a asp-action="DanhSachHocVien" asp-route-id="@Model.MaLop" class="btn btn-success">
            <i class="fa-solid fa-users"></i> Xem danh sách học viên
        </a>
        <a asp-action="LopDangDay" class="btn btn-secondary">
            <i class="fa-solid fa-arrow-left"></i> Quay lại
        </a>
    </div>
</div>
