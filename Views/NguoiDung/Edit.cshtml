@model EnlightEnglishCenter.Models.NguoiDung
@{
    ViewData["Title"] = "Sửa người dùng";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="container mt-4">
    <h4 class="text-warning mb-4"><i class="bi bi-pencil-square"></i> Cập nhật thông tin người dùng</h4>

    <form asp-action="Edit" method="post">
        <input type="hidden" asp-for="MaNguoiDung" />
        <div class="mb-3">
            <label class="form-label">Họ tên</label>
            <input asp-for="HoTen" class="form-control" />
        </div>
        <div class="mb-3">
            <label class="form-label">Email</label>
            <input asp-for="Email" class="form-control" />
        </div>
        <div class="mb-3">
            <label class="form-label">Vai trò</label>
            <select asp-for="MaVaiTro" class="form-select">
                @foreach (var v in ViewBag.VaiTros)
                {
                    <option value="@v.MaVaiTro" selected="@(v.MaVaiTro == Model.MaVaiTro)">
                        @v.TenVaiTro
                    </option>
                }
            </select>
        </div>
        <div class="mb-3">
            <label class="form-label">Trạng thái</label>
            <input asp-for="TrangThai" class="form-control" />
        </div>

        <button type="submit" class="btn btn-warning text-white">Cập nhật</button>
        <a href="/NguoiDung/Index" class="btn btn-secondary">Hủy</a>
    </form>
</div>
