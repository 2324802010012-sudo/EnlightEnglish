@model EnlightEnglishCenter.Models.NguoiDung
@{
    ViewData["Title"] = "Xóa người dùng";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="container mt-5 text-center">
    <h4 class="text-danger mb-4"><i class="bi bi-exclamation-triangle"></i> Xóa người dùng</h4>

    <p>Bạn có chắc chắn muốn xóa người dùng <strong>@Model.HoTen</strong> không?</p>

    <form asp-action="Delete">
        <input type="hidden" asp-for="MaNguoiDung" />
        <button type="submit" class="btn btn-danger me-2">Xóa</button>
        <a href="/NguoiDung/Index" class="btn btn-secondary">Hủy</a>
    </form>
</div>
